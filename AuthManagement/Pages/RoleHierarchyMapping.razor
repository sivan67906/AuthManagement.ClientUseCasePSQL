<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0;
    }

    .page-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }


    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .breadcrumb-link:hover {
            text-decoration: underline;
        }

    .breadcrumb-current {
        color: #666;
    }

    /* Container */
    .mapping-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        padding-left: 21px;
        padding-right: 21px;
        padding-bottom:21px
    }

    /* Toolbar */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0px;
        background: white;
        border-bottom: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 16px;
    }

    .toolbar-left {
        display: flex;
        align-items: center;
    }


    
.toolbar-left::before {
    content: "";
    height: 21px;
    width: 0.2rem;
    inset-block-start: 0.15rem;
    inset-inline-start: -0.65rem;
    background: linear-gradient(to bottom, #26bf9491 50%, #97959e8a 50%);
    border-radius: 0.5rem;
}



    .mappings-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-left: auto;
    }

    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-input {
        width: 100%;
        padding: 8px 12px 8px 36px;
        border: 1px solid #d9d9e3;
        font-size: 14px;
        padding-left: 39px;
        border-radius: 0.25rem;
        padding-top: 5px;
        padding-bottom: 7px;
    }

        .search-input:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
        }

    .search-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 18px;
    }

    .add-button {
        background-color: var(--bs-primary) !important;
        color: white;
        border: none;
        font-weight: 500;
        cursor: pointer !important;
        display: flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        font-size: 0.75rem;
        padding: 0.42rem 0.5rem !important;
        border-radius: 0.25rem;
    }

        /* .add-button:hover {
            background-color: #6d28d9;
        } */

        .add-button i {
            font-size: 18px;
        }

    /* Table */
    .mapping-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #80808054;
    }

        .mapping-table thead {
            background-color: #fafafa;
        }

        .mapping-table th {
            padding: 7px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #00000024;
            cursor: pointer;
            user-select: none;
            color: black;
