            }

    .sort-indicator {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .sort-arrow {
        width: 0;
        height: 0;
        border-left: 4px solid transparent;
        border-right: 4px solid transparent;
    }

        .sort-arrow.up {
            border-bottom: 5px solid #ccc;
        }

            .sort-arrow.up.active {
                border-bottom-color: #7c3aed;
            }

        .sort-arrow.down {
            border-top: 5px solid #ccc;
        }

            .sort-arrow.down.active {
                border-top-color: #7c3aed;
            }

    .mapping-table th.text-center {
        text-align: center;
    }

    .mapping-table tbody tr {
        transition: background-color 0.2s;
        border-bottom: 1px solid #00000024
    }

    .mapping-table td {
        padding: 5px 16px;
        font-size: 14px;
        color: #333;
    }

    .mapping-table tbody tr:last-child {
        border-bottom: none;
    }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .role-name {
        color: #333;
        font-weight: 600;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }


    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

        .action-btn i {
            font-size: 14px;
            display: block;
            line-height: 1;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .action-btn.view-btn {
            background-color: #e3f2fdcf;
            color: #2196f3;
        }

            .action-btn.view-btn:hover {
                background-color: #2196f3;
                color: white;
            }

        .action-btn.edit-btn {
            background-color: #fff3e0ad;
            color: #ff9800;
        }


            .action-btn.edit-btn:hover {
                background-color: #ff9800;
                color: white;
            }


        .action-btn.delete-btn {
            background-color: #ffebee94;
            color: #f44336;
        }


            .action-btn.delete-btn:hover {
                background-color: #f44336;
                color: white;
            }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 13px 0px;
        background: white;
        border-left: 1px solid #80808047;
        margin-bottom: 1px;
        border-right: 1px solid #80808047;
        border-bottom: 1px solid #80808047;
    }


    .pagination-info {
        font-size: 14px;
        color: #666;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-right: 16px;
    }

        .page-size-selector label {
            font-size: 14px;
            color: #666;
        }

        .page-size-selector select {
            padding: 4px 8px;
            border: 1px solid #d9d9e3;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

    .pagination-buttons {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .page-btn {
        min-width: 40px;
        height: 40px;
        padding: 0 8px;
        border: 1px solid #d9d9e373;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s;
        color: #333;
    }

        .page-btn:hover:not(:disabled) {
            background: #f5f5f5;
            border-color: var(--bs-primary);
            color: var(--bs-primary);
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .page-btn.active {
            color: white;
            border-color: var(--bs-primary);
            font-weight: 700;
            background: var(--bs-primary);
        }


    /* Loading and Error States */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #7c3aed;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loading-text {
        margin-top: 16px;
        font-size: 14px;
        color: #666;
    }

    .error-container {
        padding: 20px;
        background: #ffebee;
        border: 1px solid #ef5350;
        border-radius: 8px;
        margin: 20px;
    }

    .error-message {
        color: #c62828;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .error-message i {
            font-size: 20px;
        }

    .no-data-container {
        padding: 60px 20px;
        text-align: center;
    }

    .no-data-icon {
        font-size: 64px;
        color: #e0e0e0;
        margin-bottom: 16px;
    }

    .no-data-text {
        font-size: 16px;
        color: #666;
    }

    /* Issue #6: Offcanvas full text display */
    .offcanvas-title {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
        max-width: 100%;
    }
    
    .offcanvas-body p, .offcanvas-body div {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: pre-wrap;
    }
</style>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else{

     <div class="page-header">
        <h1 class="page-title">Role Hierarchy Mapping</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                   
                    <a href="/" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                    <span class="breadcrumb-separator">></span>
                </li>
                <li class="">
                    <span class="breadcrumb-current">Role Hierarchy Mapping</span>
                </li>
            </ul>
        </nav>
    </div>




    <!-- Main Content Card -->
    <div class="mapping-container">
        <!-- Toolbar -->
        <div class="toolbar-container">
            <div class="toolbar-left">
                <span class="mappings-list-label">Mappings List</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <input type="text"
                           class="search-input"
                           placeholder="Search mappings..."
                           value="@_searchString"
                           @oninput="@((e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    @if (string.IsNullOrEmpty(_searchString))
                    {
                        <i class="ti tabler-search search-icon"></i>
                    }
                    @* else
                    {
                        <i class="ti tabler-x clear-icon" @onclick="ClearSearch"></i>
                    } *@
                </div>
                @if (_canCreate)
                {
                    <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                        <i class="ti tabler-plus"></i>
                        <span>Add Mapping</span>
                    </button>
                }
            </div>
        </div>

        <!-- Table Content -->
        @if (_isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p class="loading-text">Loading role hierarchy mappings...</p>
            </div>
        }
        else if (_hasError)
        {
            <div class="error-container">
                <div class="error-message">
                    <i class="ti tabler-alert-triangle"></i>
                    <span>@_errorMessage</span>
                </div>
            </div>
        }
        else if (_pagedMappings != null && _pagedMappings.Any())
        {
            <table class="mapping-table">
                <thead>
                    <tr>
                            <th class="plusHeading"></th>

                        <th class="sortable" @onclick='() => ToggleSort("no")'>
                            #
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("department")'>
                            DEPARTMENT
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "department" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "department" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("parent")'>
                            PARENT ROLE
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "parent" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "parent" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("child")'>
                            CHILD ROLE
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "child" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "child" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="text-center">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mapping in _pagedMappings)
                    {
                        <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(mapping))">
                                    <div class="plus" style="border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        box-sizing: content-box;
                        border: 2px solid var(--bs-paper-bg);
                        background-color: var(--bs-primary);
                        block-size: .85rem;
                        box-shadow: 0 0 3px var(--bs-gray-800);
                        color: var(--bs-white);    width: 17px;
            height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>

                            <td><span class="serial-number">@GetGlobalSerialNumber(mapping)</span></td>
                            <td><span class="role-name">@mapping.DepartmentName</span></td>
                            <td><span class="role-name">@mapping.ParentRoleName</span></td>
                            <td><span class="role-name">@mapping.ChildRoleName</span></td>
                            <td>
                                <div class="action-buttons">
                                    @if (_canView)
                                    {
                                        <button class="action-btn view-btn"
                                                @onclick="() => OpenViewDialog(mapping)"
                                                title="View Details">
                                            <i class="ti tabler-eye"></i>
                                        </button>
                                    }
                                    @if (_canEdit)
                                    {
                                        <button class="action-btn edit-btn"
                                                @onclick="() => OpenEditDialog(mapping)"
                                                title="Edit">
                                            <i class="ti tabler-edit"></i>
                                        </button>
                                    }
                                    @if (_canDelete)
                                    {
                                        <button class="action-btn delete-btn"
                                                @onclick="() => DeleteMapping(mapping)"
                                                title="Delete">
                                            <i class="ti tabler-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
                <div class="pagination-container">
                    @* <div class="pagination-info">
          Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
      </div> *@
                    <div class="pagination-controls">

                        @* mobile  screen *@

                        @{
                            var range = GetMobilePageRange();
                        }

                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>



                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
        }
        else
        {
            @* Issue #3: Show NoResultsFound component when no mappings match *@
            <NoResultsFound Message="No role hierarchy mappings found" 
                           IconClass="ti tabler-hierarchy-off"
                           SearchTerm="@_searchString" />
        }
    </div>
}
</div>

