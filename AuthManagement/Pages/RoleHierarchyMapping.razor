    private async Task HandleSubmit(RoleHierarchyMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var parentRoleId = Guid.Parse(model.ParentRoleId);
            var childRoleId = Guid.Parse(model.ChildRoleId);

            if (parentRoleId == childRoleId)
            {
                await JS.InvokeVoidAsync("showToast", "error", "Parent and child roles cannot be the same", Severity.Error);
                _isSaving = false;
                return;
            }

            //  DUPLICATE CHECK
            var isDuplicate = _mappings.Any(m => 
                m.ParentRoleId == parentRoleId && 
                m.ChildRoleId == childRoleId && 
                (!_isEditMode || m.Id != _selectedMapping?.Id));

            if (isDuplicate)
            {
                var parentName = _roles.FirstOrDefault(r => r.Id == parentRoleId)?.Name ?? "Unknown Parent Role";
                var childName = _roles.FirstOrDefault(r => r.Id == childRoleId)?.Name ?? "Unknown Child Role";
                await JS.InvokeVoidAsync("showToast", "error", $"Duplicate hierarchy mapping: {parentName} â†’ {childName} already exists", Severity.Warning);
                _isSaving = false;
                return;
            }

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdateRoleHierarchyMappingRequest
                    {
                        Id = _selectedMapping.Id,
                        ParentRoleId = parentRoleId,
                        ChildRoleId = childRoleId,
                        Level = 1
                    };

                var response = await RBACService.UpdateRoleHierarchyMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role hierarchy mapping updated successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to update role hierarchy mapping", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateRoleHierarchyMappingRequest
                    {
                        ParentRoleId = parentRoleId,
                        ChildRoleId = childRoleId,
                        Level = 1
                    };

                var response = await RBACService.CreateRoleHierarchyMappingAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role hierarchy mapping created successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to create role hierarchy mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role hierarchy mapping");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

