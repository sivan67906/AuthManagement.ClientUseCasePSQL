@code {
    [Parameter]
    public Guid Id { get; set; }

    private CompanyDto? _company;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompany();
    }

    private async Task LoadCompany()
    {
        try
        {
            _isLoading = true;
            var response = await CompanyService.GetCompanyAsync(Id);
            if (response.Success && response.Data != null)
            {
                _company = response.Data;
            }
            else
            {
                Snackbar.Add(response.Message ?? "Failed to load company", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading company");
            Snackbar.Add("An error occurred while loading company", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/company");
    }

    private void EditCompany()
    {
        NavigationManager.NavigateTo($"/company/edit/{Id}");
    }

    private string GetCompanyInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "C";
        
        var words = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (words.Length == 1)
            return words[0].Substring(0, Math.Min(2, words[0].Length)).ToUpper();
        
        return (words[0][0].ToString() + words[1][0].ToString()).ToUpper();
    }

    private string GetStatusClass(CompanyStatus status)
    {
        return status switch
        {
            CompanyStatus.Active => "badge-active",
            CompanyStatus.Draft => "badge-draft",
            CompanyStatus.Inactive => "badge-inactive",
            _ => ""
        };
    }

    private string GetMonthName(byte month)
    {
        return new DateTime(2000, month, 1).ToString("MMMM");
    }
}
