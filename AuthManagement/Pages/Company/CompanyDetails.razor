@page "/company/view/{Id:guid}"
@using AuthManagement.Models
@using AuthManagement.Services
@inject CompanyService CompanyService
@inject NavigationManager NavigationManager
@inject ILogger<CompanyDetails> Logger
@inject ISnackbar Snackbar
@inject IJSRuntime JS
@attribute [Authorize]

<PageTitle>Company Details - @(_company?.LegalName ?? "Loading...")</PageTitle>

<style>
    .company-details-page {
        background: #f5f7fa;
        min-height: 100vh;
        padding: 24px;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #7c3aed;
        text-decoration: none;
        font-size: 14px;
        margin-bottom: 20px;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: #7c3aed;
    }

    /* Profile Card Header */
    .profile-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        margin-bottom: 24px;
        overflow: hidden;
    }

    .profile-header {
        padding: 24px 32px;
        border-bottom: 1px solid #f0f0f0;
    }

    .profile-header-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 24px;
    }

    .profile-main {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    .profile-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 600;
        color: #4f46e5;
        flex-shrink: 0;
        overflow: hidden;
    }

    .profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-info {
        flex: 1;
    }

    .profile-name-row {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 4px;
    }

    .profile-name {
        font-size: 22px;
        font-weight: 600;
        color: #1f2937;
        margin: 0;
    }

    .verified-badge {
        width: 20px;
        height: 20px;
        background: #3b82f6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
    }

    .profile-role {
        display: flex;
        align-items: center;
        gap: 6px;
        color: #6b7280;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .profile-rating {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        color: #6b7280;
        margin-bottom: 16px;
    }

    .rating-stars {
        display: flex;
        gap: 2px;
    }

    .star {
        color: #fbbf24;
        font-size: 14px;
    }

    .star.empty {
        color: #d1d5db;
    }

    .star.half {
        position: relative;
    }

    .profile-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 16px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
        color: #4b5563;
    }

    .meta-item i {
        color: #9ca3af;
        font-size: 16px;
    }

    .profile-badges {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .badge {
        padding: 6px 14px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-active {
        background: #d1fae5;
        color: #065f46;
    }

    .badge-draft {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-feature {
        background: #ede9fe;
        color: #7c3aed;
    }

    .badge-multi-currency {
        background: #dbeafe;
        color: #1d4ed8;
    }

    .profile-actions {
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    .btn-edit {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: #7c3aed;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-edit:hover {
        background: #6d28d9;
    }

    .btn-icon {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #6b7280;
        transition: all 0.2s;
    }

    .btn-icon:hover {
        border-color: #7c3aed;
        color: #7c3aed;
    }

    /* Main Content Layout */
    .content-layout {
        display: grid;
        grid-template-columns: 1fr 340px;
        gap: 24px;
    }

    .main-content {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    /* Section Cards */
    .section-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        padding: 24px;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #f3f4f6;
    }

    .section-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .section-icon.purple { background: #ede9fe; color: #7c3aed; }
    .section-icon.blue { background: #dbeafe; color: #3b82f6; }
    .section-icon.green { background: #d1fae5; color: #10b981; }
    .section-icon.orange { background: #ffedd5; color: #f97316; }
    .section-icon.pink { background: #fce7f3; color: #ec4899; }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #1f2937;
        margin: 0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .info-grid.single-col {
        grid-template-columns: 1fr;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .info-label {
        font-size: 12px;
        font-weight: 500;
        color: #9ca3af;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 14px;
        color: #374151;
        font-weight: 500;
    }

    .info-value.empty {
        color: #9ca3af;
        font-style: italic;
        font-weight: 400;
    }

    .info-value a {
        color: #7c3aed;
        text-decoration: none;
    }

    .info-value a:hover {
        text-decoration: underline;
    }

    /* Sidebar */
    .sidebar {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .sidebar-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        padding: 20px;
    }

    .sidebar-title {
        font-size: 14px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 16px;
        padding-bottom: 10px;
        border-bottom: 1px solid #f3f4f6;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .sidebar-title i {
        /* color: #7c3aed; */
    }

    /* Skills/Tags Style */
    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .tag {
        padding: 6px 12px;
        background: #f3f4f6;
        border-radius: 6px;
        font-size: 13px;
        color: #374151;
    }

    /* Tools/Icons Style */
    .tools-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
    }

    .tool-icon {
        width: 44px;
        height: 44px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        background: #f8f9fa;
        color: #6b7280;
        transition: all 0.2s;
    }

    .tool-icon.active {
        background: #ede9fe;
        color: #7c3aed;
    }

    .tool-icon.success {
        background: #d1fae5;
        color: #10b981;
    }

    /* Timeline Style */
    .timeline-item {
        display: flex;
        gap: 12px;
        padding: 12px 0;
        border-bottom: 1px solid #f3f4f6;
    }

    .timeline-item:last-child {
        border-bottom: none;
    }

    .timeline-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #7c3aed;
        margin-top: 6px;
        flex-shrink: 0;
    }

    .timeline-content {
        flex: 1;
    }

    .timeline-label {
        font-size: 12px;
        color: #9ca3af;
        margin-bottom: 2px;
    }

    .timeline-value {
        font-size: 14px;
        color: #374151;
    }

    .timeline-sub {
        font-size: 12px;
        color: #9ca3af;
        margin-top: 2px;
    }

    /* Personal Info Style */
    .personal-info-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #f3f4f6;
        font-size: 14px;
    }

    .personal-info-row:last-child {
        border-bottom: none;
    }

    .personal-info-label {
        color: #6b7280;
    }

    .personal-info-value {
        color: #1f2937;
        font-weight: 500;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px;
        background: white;
        border-radius: 12px;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 3px solid #f3f4f6;
        border-top-color: #7c3aed;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .content-layout {
            grid-template-columns: 1fr;
        }

        .sidebar {
            order: -1;
        }
    }

    @@media (max-width: 768px) {
        .profile-header-content {
            flex-direction: column;
        }

        .profile-actions {
            width: 100%;
            justify-content: flex-start;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .profile-meta {
            flex-direction: column;
            gap: 8px;
        }
    }
</style>

<div class="company-details-page">
    <a href="/company" class="back-link" @onclick:preventDefault @onclick="NavigateBack">
        <i class="ti tabler-arrow-left"></i>
        Back to Companies
    </a>

    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />

    }
    else if (_company != null)
    {
        <!-- Profile Card Header -->
        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-header-content">
                    <div class="profile-main">
                        <div class="profile-avatar">
                            @if (!string.IsNullOrEmpty(_company.LogoFileUrl))
                            {
                                <img src="@_company.LogoFileUrl" alt="@_company.LegalName" />
                            }
                            else
                            {
                                @GetCompanyInitials(_company.LegalName)
                            }
                        </div>
                        <div class="profile-info">
                            <div class="profile-name-row">
                                <h1 class="profile-name">@_company.LegalName</h1>
                                @if (_company.Status == CompanyStatus.Active)
                                {
                                    <span class="verified-badge" title="Active Company">
                                        <i class="ti tabler-check"></i>
                                    </span>
                                }
                            </div>
                            <div class="profile-role">
                                <i class="ti tabler-building"></i>
                                @_company.LegalStructureName
                                @if (!string.IsNullOrEmpty(_company.TradeName))
                                {
                                    <span>â€¢ @_company.TradeName</span>
                                }
                            </div>
                            <div class="profile-rating">
                                <span>Rating:</span>
                                <div class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        @if (i <= 4)
                                        {
                                            <i class="ti tabler-star-filled star"></i>
                                        }
                                        else
                                        {
                                            <i class="ti tabler-star-half-filled star"></i>
                                        }
                                    }
                                </div>
                                <span>(4.5) Excellent</span>
                            </div>
                            <div class="profile-meta">
                                @if (!string.IsNullOrEmpty(_company.CityName) || !string.IsNullOrEmpty(_company.CountryName))
                                {
                                    <div class="meta-item">
                                        <i class="ti tabler-map-pin"></i>
                                        @(string.Join(", ", new[] { _company.CityName, _company.StateName, _company.CountryName }.Where(x => !string.IsNullOrEmpty(x))))
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(_company.BaseCurrencyCode))
                                {
                                    <div class="meta-item">
                                        <i class="ti tabler-currency-dollar"></i>
                                        @_company.BaseCurrencyCode - @_company.BaseCurrencyName
                                    </div>
                                }
                                @if (_company.IncorporationDate.HasValue)
                                {
                                    <div class="meta-item">
                                        <i class="ti tabler-calendar"></i>
                                        Est. @_company.IncorporationDate.Value.Year
                                    </div>
                                }
                                <div class="meta-item">
                                    <i class="ti tabler-briefcase"></i>
                                    @_company.LegalStructureName
                                </div>
                            </div>
                            <div class="profile-badges">
                                <span class="badge @GetStatusClass(_company.Status)">@_company.StatusName</span>
                                @if (_company.EnableMultiCurrency)
                                {
                                    <span class="badge badge-multi-currency">Multi-Currency</span>
                                }
                                @if (_company.LockBackDatedPosting)
                                {
                                    <span class="badge badge-feature">Back-Date Locked</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="profile-actions">
                        <button class="btn-edit" @onclick="EditCompany">
                            <i class="ti tabler-edit"></i>
                            Edit Company
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Layout -->
        <div class="content-layout">
            <div class="main-content">
                <!-- Company Information -->
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon purple">
                            <i class="ti tabler-building-skyscraper"></i>
                        </div>
                        <h3 class="section-title">Company Information</h3>
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Company Code</span>
                            <span class="info-value">@_company.CompanyCode</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Legal Name</span>
                            <span class="info-value">@_company.LegalName</span>
                        </div>
                        @if (!string.IsNullOrEmpty(_company.TradeName))
                        {
                            <div class="info-item">
                                <span class="info-label">Trade Name</span>
                                <span class="info-value">@_company.TradeName</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.ShortName))
                        {
                            <div class="info-item">
                                <span class="info-label">Short Name</span>
                                <span class="info-value">@_company.ShortName</span>
                            </div>
                        }
                        <div class="info-item">
                            <span class="info-label">Legal Structure</span>
                            <span class="info-value">@_company.LegalStructureName</span>
                        </div>
                        @if (_company.IncorporationDate.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Incorporation Date</span>
                                <span class="info-value">@_company.IncorporationDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.ParentCompanyName))
                        {
                            <div class="info-item">
                                <span class="info-label">Parent Company</span>
                                <span class="info-value">@_company.ParentCompanyName</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Registration & Compliance -->
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon green">
                            <i class="ti tabler-certificate"></i>
                        </div>
                        <h3 class="section-title">Registration & Compliance</h3>
                    </div>
                    <div class="info-grid">
                        @if (!string.IsNullOrEmpty(_company.RegistrationNumber))
                        {
                            <div class="info-item">
                                <span class="info-label">Registration Number</span>
                                <span class="info-value">@_company.RegistrationNumber</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.PANNumber))
                        {
                            <div class="info-item">
                                <span class="info-label">PAN Number</span>
                                <span class="info-value">@_company.PANNumber</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.GSTIN))
                        {
                            <div class="info-item">
                                <span class="info-label">GSTIN</span>
                                <span class="info-value">@_company.GSTIN</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.TANNumber))
                        {
                            <div class="info-item">
                                <span class="info-label">TAN Number</span>
                                <span class="info-value">@_company.TANNumber</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.RegistrationCountryName))
                        {
                            <div class="info-item">
                                <span class="info-label">Registration Country</span>
                                <span class="info-value">@_company.RegistrationCountryName</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.RegistrationStateName))
                        {
                            <div class="info-item">
                                <span class="info-label">Registration State</span>
                                <span class="info-value">@_company.RegistrationStateName</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Address -->
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon blue">
                            <i class="ti tabler-map-2"></i>
                        </div>
                        <h3 class="section-title">Address</h3>
                    </div>
                    <div class="info-grid single-col">
                        <div class="info-item">
                            <span class="info-label">Full Address</span>
                            <span class="info-value">
                                @{
                                    var addressParts = new List<string>();
                                    if (!string.IsNullOrEmpty(_company.AddressLine1)) addressParts.Add(_company.AddressLine1);
                                    if (!string.IsNullOrEmpty(_company.AddressLine2)) addressParts.Add(_company.AddressLine2);
                                    if (!string.IsNullOrEmpty(_company.CityName)) addressParts.Add(_company.CityName);
                                    if (!string.IsNullOrEmpty(_company.StateName)) addressParts.Add(_company.StateName);
                                    if (!string.IsNullOrEmpty(_company.PostalCode)) addressParts.Add(_company.PostalCode);
                                    if (!string.IsNullOrEmpty(_company.CountryName)) addressParts.Add(_company.CountryName);
                                }
                                @if (addressParts.Any())
                                {
                                    @string.Join(", ", addressParts)
                                }
                                else
                                {
                                    <span class="empty">Not specified</span>
                                }
                            </span>
                        </div>
                        @if (!string.IsNullOrEmpty(_company.TimeZoneName))
                        {
                            <div class="info-item">
                                <span class="info-label">Time Zone</span>
                                <span class="info-value">@_company.TimeZoneName</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon orange">
                            <i class="ti tabler-address-book"></i>
                        </div>
                        <h3 class="section-title">Contact Information</h3>
                    </div>
                    <div class="info-grid">
                        @if (!string.IsNullOrEmpty(_company.PrimaryContactName))
                        {
                            <div class="info-item">
                                <span class="info-label">Primary Contact</span>
                                <span class="info-value">@_company.PrimaryContactName</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.PrimaryEmail))
                        {
                            <div class="info-item">
                                <span class="info-label">Email</span>
                                <span class="info-value">
                                    <a href="mailto:@_company.PrimaryEmail">@_company.PrimaryEmail</a>
                                </span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.PrimaryPhone))
                        {
                            <div class="info-item">
                                <span class="info-label">Phone</span>
                                <span class="info-value">
                                    <a href="tel:@_company.PrimaryPhone">@_company.PrimaryPhone</a>
                                </span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(_company.WebsiteUrl))
                        {
                            <div class="info-item">
                                <span class="info-label">Website</span>
                                <span class="info-value">
                                    <a href="@_company.WebsiteUrl" target="_blank">@_company.WebsiteUrl</a>
                                </span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Financial Settings -->
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon pink">
                            <i class="ti tabler-report-money"></i>
                        </div>
                        <h3 class="section-title">Financial Settings</h3>
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Base Currency</span>
                            <span class="info-value">@_company.BaseCurrencyName (@_company.BaseCurrencyCode)</span>
                        </div>
                        @if (_company.ReportingCurrencyId.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Reporting Currency</span>
                                <span class="info-value">@_company.ReportingCurrencyName (@_company.ReportingCurrencyCode)</span>
                            </div>
                        }
                        <div class="info-item">
                            <span class="info-label">Fiscal Year Start</span>
                            <span class="info-value">@GetMonthName(_company.FiscalYearStartMonth)</span>
                        </div>
                        @if (_company.BooksStartDate.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Books Start Date</span>
                                <span class="info-value">@_company.BooksStartDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
                        }
                        <div class="info-item">
                            <span class="info-label">Multi-Currency</span>
                            <span class="info-value">@(_company.EnableMultiCurrency ? "Enabled" : "Disabled")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Rounding</span>
