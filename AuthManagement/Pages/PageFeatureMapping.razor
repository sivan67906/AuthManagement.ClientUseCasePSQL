<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0;
    }

    .mapping-table tbody tr:hover {
        box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px, rgba(0, 0, 0, 0.3) 0px 7px 13px -3px, rgba(0, 0, 0, 0.2) 0px -3px 0px inset;
        border-left: 5px solid #7367f0
    }

    .page-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }


    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .breadcrumb-link:hover {
            text-decoration: underline;
        }

    .breadcrumb-current {
        color: #666;
    }

    /* Container */
    .mapping-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        padding-left: 21px;
        padding-right: 21px;
        padding-bottom: 21px;
    }

    /* Toolbar */
