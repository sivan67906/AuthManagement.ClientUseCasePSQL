    private async Task HandleSubmit(PageFeatureMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var pageId = Guid.Parse(model.PageId);
            var featureId = Guid.Parse(model.FeatureId);

            //  DUPLICATE CHECK
            var isDuplicate = _mappings.Any(m => 
                m.PageId == pageId && 
                m.FeatureId == featureId && 
                (!_isEditMode || m.Id != _selectedMapping?.Id));

            if (isDuplicate)
            {
                var pageName = _pages.FirstOrDefault(p => p.Id == pageId)?.Name ?? "Unknown Page";
                var featureName = _features.FirstOrDefault(f => f.Id == featureId)?.Name ?? "Unknown Feature";
                await JS.InvokeVoidAsync("showToast", "error", $"Duplicate mapping: {pageName} - {featureName} already exists");
                _isSaving = false;
                return;
            }

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdatePageFeatureMappingRequest
                {
                    Id = _selectedMapping.Id,
                    PageId = pageId,
                    FeatureId = featureId
                };

                var response = await RBACService.UpdatePageFeatureMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Page feature mapping updated successfully");
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update page feature mapping"));
                }
            }
            else
            {
                var createRequest = new CreatePageFeatureMappingRequest
                {
                    PageId = pageId,
                    FeatureId = featureId
                };

                var response = await RBACService.CreatePageFeatureMappingAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Page feature mapping created successfully");
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create page feature mapping"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving page feature mapping");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
            await JS.InvokeVoidAsync("enableScroll");
        }
    }

