    }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .mapping-name {
        color: #333;
        font-weight: 600;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }


    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

        .action-btn i {
            font-size: 14px;
            display: block;
            line-height: 1;
        }

        .action-btn:hover {
            transform: translateY(-2px);
