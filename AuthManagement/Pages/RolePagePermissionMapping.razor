    private async Task HandleSubmit(RolePagePermissionMappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var roleId = Guid.Parse(model.RoleId);
            var pageId = Guid.Parse(model.PageId);
            var permissionId = Guid.Parse(model.PermissionId);
            Guid? departmentId = string.IsNullOrEmpty(model.DepartmentId) ? null : Guid.Parse(model.DepartmentId);

            //  DUPLICATE CHECK
            var isDuplicate = _mappings.Any(m => 
                m.RoleId == roleId && 
                m.PageId == pageId && 
                m.PermissionId == permissionId && 
                m.DepartmentId == departmentId && 
                (!_isEditMode || m.Id != _selectedMapping?.Id));

            if (isDuplicate)
            {
                var roleName = _roles.FirstOrDefault(r => r.Id == roleId)?.Name ?? "Unknown Role";
                var pageName = _pages.FirstOrDefault(p => p.Id == pageId)?.Name ?? "Unknown Page";
                var permName = _permissions.FirstOrDefault(p => p.Id == permissionId)?.Name ?? "Unknown Permission";
                var deptName = departmentId.HasValue ? _departments.FirstOrDefault(d => d.Id == departmentId.Value)?.Name ?? "Unknown Department" : "No Department";
                await JS.InvokeVoidAsync("showToast", "error", $"Duplicate mapping: {roleName} - {pageName} - {permName} - {deptName} already exists", Severity.Warning);
                _isSaving = false;
                return;
            }

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdateRolePagePermissionMappingDto
                {
                    Id = _selectedMapping.Id,
                    RoleId = roleId,
                    PageId = pageId,
                    PermissionId = permissionId,
                    DepartmentId = departmentId,
                    IsActive = model.IsActive
                };

                var response = await RBACService.UpdateRolePagePermissionMappingAsync(updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role page permission mapping updated successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to update role page permission mapping", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateRolePagePermissionMappingDto
                {
                    RoleId = roleId,
                    PageId = pageId,
                    PermissionId = permissionId,
                    DepartmentId = departmentId,
                    IsActive = model.IsActive
                };

                var response = await RBACService.CreateRolePagePermissionMappingAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role page permission mapping created successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to create role page permission mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role page permission mapping");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

