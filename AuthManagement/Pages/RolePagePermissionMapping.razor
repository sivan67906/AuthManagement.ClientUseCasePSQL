@page "/rolepagepermissionmapping"
@using AuthManagement.Models
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<RolePagePermissionMapping> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<PageTitle>Role Page Permission Mapping</PageTitle>

<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0;
    }

    .page-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }


    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .breadcrumb-link:hover {
            text-decoration: underline;
        }

    .breadcrumb-current {
        color: #666;
    }

    /* Container */
    .mapping-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        padding-left: 21px;
        padding-right: 21px;
        padding-bottom: 21px;
    }

    /* Toolbar */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0px;
        background: white;
        border-bottom: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 16px;
    }

    .toolbar-left {
        display: flex;
        align-items: center;
    }

        .toolbar-left::before {
            content: "";
            height: 21px;
            width: 0.2rem;
            inset-block-start: 0.15rem;
            inset-inline-start: -0.65rem;
            background: linear-gradient(to bottom, #26bf9491 50%, #97959e8a 50%);
            border-radius: 0.5rem;
        }

    .mappings-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-left: auto;
    }

    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-input {
        width: 100%;
        padding: 8px 12px 8px 36px;
        border: 1px solid #d9d9e3;
        font-size: 14px;
        padding-left: 39px;
        border-radius: 0.25rem;
        padding-top: 5px;
        padding-bottom: 7px;
    }

        .search-input:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
        }

    .search-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 18px;
    }

    .add-button {
        background-color: var(--bs-primary) !important;
        color: white;
        border: none;
        font-weight: 500;
        cursor: pointer !important;
        display: flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        font-size: 0.75rem;
        padding: 0.42rem 0.5rem !important;
        border-radius: 0.25rem;
    }

        .add-button:hover {
            background-color: #6d28d9;
        }

        .add-button i {
            font-size: 18px;
        }

    /* Table */
    .mapping-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #80808054;
    }

        .mapping-table thead {
            background-color: #fafafa;
        }

        .mapping-table th {
            padding: 7px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            user-select: none;
            color: black;
            background: white;
        }

            .mapping-table th:last-child {
                border-right: none;
            }

            .mapping-table th.sortable {
                position: relative;
                padding-right: 30px;
            }

    .sort-indicator {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .sort-arrow {
        width: 0;
        height: 0;
        border-left: 4px solid transparent;
        border-right: 4px solid transparent;
    }

        .sort-arrow.up {
            border-bottom: 5px solid #ccc;
        }

            .sort-arrow.up.active {
                border-bottom-color: #7c3aed;
            }

        .sort-arrow.down {
            border-top: 5px solid #ccc;
        }

            .sort-arrow.down.active {
                border-top-color: #7c3aed;
            }

    .mapping-table th.text-center {
        text-align: center;
    }

    .mapping-table tbody tr {
        transition: background-color 0.2s;
        border-bottom: 1px solid #00000024;
    }

    .mapping-table td {
        padding: 5px 16px;
        font-size: 14px;
        color: #333;
    }

    .mapping-table tbody tr:last-child {
        border-bottom: none;
    }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .mapping-name {
        color: #333;
        font-weight: 600;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }


    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

        .action-btn i {
            font-size: 14px;
            display: block;
            line-height: 1;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .action-btn.view-btn {
            background-color: #e3f2fdcf;
            color: #2196f3;
        }


            .action-btn.view-btn:hover {
                background-color: #2196f3;
                color: white;
            }

        .action-btn.edit-btn {
            background-color: #fff3e0ad;
            color: #ff9800;
        }

            .action-btn.edit-btn:hover {
                background-color: #ff9800;
                color: white;
            }

        .action-btn.delete-btn {
            background-color: #ffebee94;
            color: #f44336;
        }


            .action-btn.delete-btn:hover {
                background-color: #f44336;
                color: white;
            }


    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 13px 0px;
        background: white;
        border-left: 1px solid #80808047;
        margin-bottom: 1px;
        border-right: 1px solid #80808047;
        border-bottom: 1px solid #80808047;
    }




    .pagination-info {
        font-size: 14px;
        color: #666;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-right: 16px;
    }

        .page-size-selector label {
            font-size: 14px;
            color: #666;
        }

        .page-size-selector select {
            padding: 4px 8px;
            border: 1px solid #d9d9e3;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

    .pagination-buttons {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .page-btn {
        min-width: 40px;
        height: 40px;
        padding: 0 8px;
        border: 1px solid #d9d9e373;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s;
        color: #333;
    }

        .page-btn:hover:not(:disabled) {
            background: #f5f5f5;
            border-color: var(--bs-primary);
            color: var(--bs-primary);
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .page-btn.active {
            color: white;
            border-color: var(--bs-primary);
            font-weight: 700;
            background: var(--bs-primary);
        }



    /* Loading and Error States */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #7c3aed;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .loading-text {
        margin-top: 16px;
        font-size: 14px;
        color: #666;
    }

    .error-container {
        padding: 20px;
        background: #ffebee;
        border: 1px solid #ef5350;
        border-radius: 8px;
        margin: 20px;
    }

    .error-message {
        color: #c62828;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .error-message i {
            font-size: 20px;
        }

    .no-data-container {
        padding: 60px 20px;
        text-align: center;
    }

    .no-data-icon {
        font-size: 64px;
        color: #e0e0e0;
        margin-bottom: 16px;
    }

    .no-data-text {
        font-size: 16px;
        color: #666;
    }
</style>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else
    {
        <div class="page-header">
            <h1 class="page-title">Role Page Permission Mapping</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" class="breadcrumb-link">
                            <i class="ti tabler-home"></i>Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li class="">
                        <span class="breadcrumb-current">Role Page Permission Mapping</span>
                    </li>
                </ul>
            </nav>
        </div>


        <!-- Main Content Card -->
        <div class="mapping-container">
            <!-- Toolbar -->
            <div class="toolbar-container">
                <div class="toolbar-left">
                    <span class="mappings-list-label">Mappings List</span>
                </div>
                <div class="toolbar-right">
                    <div class="search-box">
                        <i class="ti tabler-search search-icon"></i>
                        <input type="text"
                               class="search-input"
                               placeholder="Search mappings..."
                               value="@_searchString"
                               @oninput="@((e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    </div>
                    @if (_canCreate)
                    {
                        <button class="add-button" @onclick="OpenAddDialog">
                            <i class="ti tabler-plus"></i>
                            <span>Add Mapping</span>
                        </button>
                    }
                </div>
            </div>

            <!-- Table Content -->
            @if (_isLoading)
            {
                <div class="loading-container">
                    <div class="spinner"></div>
                    <p class="loading-text">Loading role page permission mappings...</p>
                </div>
            }
            else if (_hasError)
            {
                <div class="error-container">
                    <div class="error-message">
                        <i class="ti tabler-alert-triangle"></i>
                        <span>@_errorMessage</span>
                    </div>
                </div>
            }
            else if (_pagedMappings != null && _pagedMappings.Any())
            {
                <table class="mapping-table">
                    <thead>
                        <tr>
                            <th class="plusHeading"></th>

                            <th class="sortable" @onclick='() => ToggleSort("no")'>
                                NO.
                                <span class="sort-indicator">
                                    <span class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></span>
                                    <span class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></span>
                                </span>
                            </th>
                            <th class="sortable" @onclick='() => ToggleSort("department")'>
                                DEPARTMENT
                                <span class="sort-indicator">
                                    <span class="sort-arrow up @(_sortColumn == "department" && _sortDirection == "asc" ? "active" : "")"></span>
                                    <span class="sort-arrow down @(_sortColumn == "department" && _sortDirection == "desc" ? "active" : "")"></span>
                                </span>
                            </th>
                            <th class="sortable" @onclick='() => ToggleSort("role")'>
                                ROLE NAME
                                <span class="sort-indicator">
                                    <span class="sort-arrow up @(_sortColumn == "role" && _sortDirection == "asc" ? "active" : "")"></span>
                                    <span class="sort-arrow down @(_sortColumn == "role" && _sortDirection == "desc" ? "active" : "")"></span>
                                </span>
                            </th>
                            <th class="sortable" @onclick='() => ToggleSort("page")'>
                                PAGE NAME
                                <span class="sort-indicator">
                                    <span class="sort-arrow up @(_sortColumn == "page" && _sortDirection == "asc" ? "active" : "")"></span>
                                    <span class="sort-arrow down @(_sortColumn == "page" && _sortDirection == "desc" ? "active" : "")"></span>
                                </span>
                            </th>
                            <th class="sortable" @onclick='() => ToggleSort("permission")'>
                                PERMISSION NAME
                                <span class="sort-indicator">
                                    <span class="sort-arrow up @(_sortColumn == "permission" && _sortDirection == "asc" ? "active" : "")"></span>
                                    <span class="sort-arrow down @(_sortColumn == "permission" && _sortDirection == "desc" ? "active" : "")"></span>
                                </span>
                            </th>
                            <th class="text-center">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mapping in _pagedMappings)
                        {
                            <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(mapping))">
                                    <div class="plus" style="border-radius: 50%;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    box-sizing: content-box;
                                    border: 2px solid var(--bs-paper-bg);
                                    background-color: var(--bs-primary);
                                    block-size: .85rem;
                                    box-shadow: 0 0 3px var(--bs-gray-800);
                                    color: var(--bs-white);    width: 17px;
                        height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>

                                <td><span class="serial-number">@GetGlobalSerialNumber(mapping)</span></td>
                                <td><span class="mapping-name">@(mapping.DepartmentName ?? "All Departments")</span></td>
                                <td><span class="mapping-name">@mapping.RoleName</span></td>
                                <td><span class="mapping-name">@mapping.PageName</span></td>
                                <td><span class="mapping-name">@mapping.PermissionName</span></td>
                                <td>
                                    <div class="action-buttons">
                                        @if (_canView)
                                        {
                                            <button class="action-btn view-btn"
                                                    @onclick="() => OpenViewDialog(mapping)"
                                                    title="View Details">
                                                <i class="ti tabler-eye"></i>
                                            </button>
                                        }
                                        @if (_canEdit)
                                        {
                                            <button class="action-btn edit-btn"
                                                    @onclick="() => OpenEditDialog(mapping)"
                                                    title="Edit">
                                                <i class="ti tabler-edit"></i>
                                            </button>
                                        }
                                        @if (_canDelete)
                                        {
                                            <button class="action-btn delete-btn"
                                                    @onclick="() => DeleteMapping(mapping)"
                                                    title="Delete">
                                                <i class="ti tabler-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pagination-container">
                    <div class="pagination-controls">

                        @* mobile  screen *@

                        @{
                            var range = GetMobilePageRange();
                        }

                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>



                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="no-data-container">
                    <div class="no-data-icon">
                        <i class="ti tabler-database-off"></i>
                    </div>
                    <p class="no-data-text">No role page permission mappings found</p>
                </div>
            }
        </div>
    }

</div>

<!-- Add/Edit Dialog -->
