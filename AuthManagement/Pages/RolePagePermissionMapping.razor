    private async Task HandleSubmit(RolePagePermissionFormModel model)
    {
        _isSaving = true;
        try
        {
            var roleId = Guid.Parse(model.RoleId);
            var pageId = Guid.Parse(model.PageId);
            Guid? departmentId = string.IsNullOrEmpty(model.DepartmentId) ? null : Guid.Parse(model.DepartmentId);

            // Create or update mapping using batch endpoint
            // The batch endpoint handles duplicates atomically - it updates existing Dept+Role+Page combinations
            var request = new CreateOrUpdatePermissionBatchRequest
            {
                DepartmentId = departmentId,
                RoleId = roleId,
                PageId = pageId,
                PermissionIds = model.SelectedPermissionIds
            };

            var response = await RBACService.CreateOrUpdatePermissionBatchAsync(request);
            if (response.Success)
            {
                await JS.InvokeVoidAsync("showToast", "success", 
                    _isEditMode ? "Permissions updated successfully" : "Permissions created successfully", 
                    Severity.Success);
                await LoadData();
                CloseDialog();
            }
            else
            {
                await JS.InvokeVoidAsync("showToast", "error", 
                    response.Message ?? "Failed to save permissions", 
                    Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role page permissions");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
            await JS.InvokeVoidAsync("enableScroll");
        }
    }

    private async Task DeleteMapping(DisplayRolePagePermissionGroup mapping)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Role Page Permissions",
                $"Are you sure you want to delete all permissions for role '{mapping.RoleName}' on page '{mapping.PageName}'? This action cannot be undone.");

            if (confirmed)
            {
                // Delete all permissions in the group
                var orderedPermissions = mapping.Permissions
                    .OrderByDescending(p => GetPermissionOrder(p.PermissionName)) // Delete in reverse order: D, U, C, V
                    .ToList();

                foreach (var perm in orderedPermissions)
                {
                    var response = await RBACService.DeleteRolePagePermissionMappingAsync(perm.Id);
                    if (!response.Success)
                    {
                        if (response.Message != null && response.Message.Contains("Cannot delete View"))
                        {
                            await JS.InvokeVoidAsync("showToast", "error", response.Message);
                            await LoadData();
                            return;
                        }
                    }
                }

                await JS.InvokeVoidAsync("showToast", "success", "Permissions deleted successfully");
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting role page permissions");
            await JS.InvokeVoidAsync("showToast", "error", $"Error deleting permissions: {ex.Message}");
        }
    }

    private string GetBadgeClass(string permissionName)
    {
        return permissionName.ToLower() switch
        {
            "view" => "badge-view",
            "create" => "badge-create",
            "update" => "badge-update",
            "delete" => "badge-delete",
            _ => "badge-default"
        };
    }

    private string GetPermissionCode(string permissionName)
    {
        if (string.IsNullOrEmpty(permissionName)) return "?";

        return permissionName.ToLower() switch
        {
            "view" => "V",
            "create" => "C",
            "update" => "U",
            "delete" => "D",
            _ => permissionName[0].ToString().ToUpper()
        };
    }

    private int GetPermissionOrder(string permissionName)
    {
        if (string.IsNullOrEmpty(permissionName)) return 99;

        return permissionName.ToLower() switch
        {
            "view" => 1,
            "create" => 2,
            "update" => 3,
            "delete" => 4,
            _ => 99
        };
    }
