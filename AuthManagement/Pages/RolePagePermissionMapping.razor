<div class="container-fluid p-0 p-sm-2">
   
      <div class="page-header">
        <h1 class="page-title">Role Page Permission Mapping</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                   
                    <a href="/" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                    <span class="breadcrumb-separator">></span>
                </li>
                <li class="">
                    <span class="breadcrumb-current">Role Page Permission Mapping</span>
                </li>
            </ul>
        </nav>
    </div>




    <!-- Main Container -->
    <div class="mapping-container">
        <!-- Toolbar -->
        <div class="toolbar-container">
            <div class="toolbar-left">
                <span class="mappings-list-label">Mappings List</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <input type="text"
                           class="search-input"
                           placeholder="Search mappings..."
                           value="@_searchString"
                           @oninput="@((e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    @if (string.IsNullOrEmpty(_searchString))
                    {
                        <i class="ti tabler-search search-icon"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-lg search-icon" @onclick="ClearSearch" style="cursor: pointer;"></i>
                    }
                </div>
                <button class="add-button" @onclick="OpenAddDialog">
                    <i class="ti tabler-plus"></i>
                    <span>Add Mapping</span>
                </button>

            </div>
        </div>

        <!-- Table -->
        @if (_isLoading)
        {
            <LoadingSpinner FullPage="true" />

        }
        else if (_pagedMappings.Any())
        {
            <table class="mapping-table" id="PagePermission">
                <thead>
                    <tr>
                        <th class="plusHeading"></th>

                        <th class="text-center sortable" @onclick='() => ToggleSort("no")'>
                            #
                            <div class="sort-indicator">
                                <div class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></div>
                                <div class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></div>
                            </div>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("department")'>
                            DEPARTMENT
                            <div class="sort-indicator">
                                <div class="sort-arrow up @(_sortColumn == "department" && _sortDirection == "asc" ? "active" : "")"></div>
                                <div class="sort-arrow down @(_sortColumn == "department" && _sortDirection == "desc" ? "active" : "")"></div>
                            </div>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("role")'>
                            ROLE NAME
                            <div class="sort-indicator">
                                <div class="sort-arrow up @(_sortColumn == "role" && _sortDirection == "asc" ? "active" : "")"></div>
                                <div class="sort-arrow down @(_sortColumn == "role" && _sortDirection == "desc" ? "active" : "")"></div>
                            </div>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("page")'>
                            PAGE NAME
                            <div class="sort-indicator">
                                <div class="sort-arrow up @(_sortColumn == "page" && _sortDirection == "asc" ? "active" : "")"></div>
                                <div class="sort-arrow down @(_sortColumn == "page" && _sortDirection == "desc" ? "active" : "")"></div>
                            </div>
                        </th>
                        <th>PERMISSIONS</th>
                        <th class="text-center">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mapping in _pagedMappings)
                    {
                        <tr>
                            <td class="details-control" @onclick="@(() => ShowDetails(mapping))">
                                <div class="plus" style="border-radius: 50%;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            box-sizing: content-box;
                            border: 2px solid var(--bs-paper-bg);
                            background-color: var(--bs-primary);
                            block-size: .85rem;
                            box-shadow: 0 0 3px var(--bs-gray-800);
                            color: var(--bs-white);    width: 17px;
                height: 17px;">
                                    <i class="ti tabler-plus"></i>
                                </div>
                            </td>
                            <td class="text-center serial-number">@GetGlobalSerialNumber(mapping)</td>
                            <td>@(mapping.DepartmentName ?? "All Departments")</td>
                            <td class="mapping-name">@mapping.RoleName</td>
                            <td>
                                <div>
                                    <div style="font-weight: 600;">@mapping.PageName</div>
                                    <div style="font-size: 12px; color: #6b7280;">@mapping.PageUrl</div>
                                </div>
                            </td>
                            <td>
                                <div class="permission-badges-container">
                                    @foreach (var perm in mapping.Permissions.OrderBy(p => GetPermissionOrder(p.PermissionName)))
                                    {
                                        <span class="permission-badge @GetBadgeClass(perm.PermissionName)"
                                              title="@perm.PermissionName">
                                            @GetPermissionCode(perm.PermissionName)
                                        </span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn view-btn"
                                            @onclick="() => OpenViewDialog(mapping)"
                                            title="View Details">
                                        <i class="ti tabler-eye"></i>
                                    </button>
                                    <button class="action-btn edit-btn"
                                            @onclick="() => OpenEditDialog(mapping)"
                                            title="Edit Mapping">
                                        <i class="ti tabler-edit"></i>
                                    </button>
                                    <button class="action-btn delete-btn"
                                            @onclick="() => DeleteMapping(mapping)"
                                            title="Delete Mapping">
                                        <i class="ti tabler-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="pagination-container">
                @* <div class="pagination-info">
          Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
      </div> *@
                <div class="pagination-controls">

                    @* mobile  screen *@

                    @{
                        var range = GetMobilePageRange();
                    }

                    <div class="pagination-buttons mobile-only">

                        <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                            <i class="bi bi-chevron-bar-left"></i>
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                            <i class="ti tabler-chevron-left"></i>
                        </button>

                        <button class="page-btn active">
                            @_currentPage
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                            <i class="ti tabler-chevron-right"></i>
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                            <i class="bi bi-chevron-bar-right"></i>
                        </button>

                    </div>



                    <div class="pagination-buttons web-Only">
                        <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                            <i class="bi bi-chevron-bar-left"></i>
                        </button>
                        <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                            <i class="ti tabler-chevron-left"></i>
                        </button>

                        @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                        {
                            var pageNum = i;
                            <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                    @onclick="() => GoToPage(pageNum)">
                                @pageNum
                            </button>
                        }

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                            <i class="ti tabler-chevron-right"></i>
                        </button>
                        <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                            <i class="bi bi-chevron-bar-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p>No mappings found. Click "Add Mapping" to create one.</p>
            </div>
        }
    </div>
</div>

