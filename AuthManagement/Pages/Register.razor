                            <input type="password" id="password" class="form-control" @bind="registerModel.Password" placeholder="Enter your password" aria-describedby="password">
                            <span class="input-group-text cursor-pointer password-eye"><i class="icon-base ti tabler-eye-off"></i></span>
                        </div>
                    </div>

                    <div class="my-8 form-control-validation">
                        <div class="form-check mb-0 ms-2">
                            <input class="form-check-input" type="checkbox" id="terms-conditions" @bind="acceptTerms">
                            <label class="form-check-label" for="terms-conditions">
                                I agree to privacy policy & terms
                            </label>
                        </div>
                    </div>

                    <button class="btn btn-primary d-flex w-100" type="submit" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Signing up...</span>
                        }
                        else
                        {
                            <span>Sign up</span>
                        }
                    </button>
                </EditForm>

                <p class="text-center">
                    <span>Already have an account?</span>
                    <a href="/login">
                        <span>Sign in instead</span>
                    </a>
                </p>
            </div>
        </div>
        <!-- Register Card -->
