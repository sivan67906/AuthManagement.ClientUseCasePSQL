@code {

    private List<PageDto> _pages = new();
    private List<PageDto> _filteredPages = new();
    private List<PageDto> _pagedPages = new();
    private PageDto? _selectedPage;
    private PageFormDialog.PageFormModel _pageModel = new();
    private bool _isLoading = true, _isSaving = false, _hasError = false, _isDialogOpen = false, _isOffcanvasOpen = false, _isEditMode = false;
    private string _errorMessage = string.Empty, _searchString = string.Empty, _sortColumn = "", _sortDirection = "";
    private int _currentPage = 1, _pageSize = 10, _totalItems = 0, _totalPages = 1;
    private bool _canView, _canAdd, _canEdit, _canDelete;


     bool showPopup = false;
 PageDto? selectedFeature;

 void closeSelectFeatures()
 {
     showPopup=false;
 }

    void ShowDetails(PageDto feature)
 {
     selectedFeature = feature;
     showPopup = true;
 }

 void ClosePopup()
 {
     showPopup = false;
 }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

    // pagination

    private (int start, int end) GetMobilePageRange()
    {
        //int windowSize = 2; // always show 2 page numbers

        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true) { NavigationManager.NavigateTo("/login"); return; }
            var permissions = await PermissionService.GetPagePermissionsAsync("/page");
            _canView = permissions.CanView; _canAdd = permissions.CanAdd; _canEdit = permissions.CanEdit; _canDelete = permissions.CanDelete;
            await LoadPages();
        }
        catch (Exception ex) { Logger.LogError(ex, "Error initializing Page page"); _hasError = true; _errorMessage = $"Error initializing page: {ex.Message}"; _isLoading = false; }
    }

    private async Task LoadPages()
    {
        _isLoading = true; _hasError = false;
        try
        {
            var response = await RBACService.GetAllPagesAsync();
            if (response.Success && response.Data != null) { _pages = response.Data; UpdateFilteredPages(); }
            else { _hasError = true; _errorMessage = response.Message ?? "Failed to load pages"; }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error loading pages"); _hasError = true; _errorMessage = $"Error loading pages: {ex.Message}"; }
        finally { _isLoading = false; }
    }

    private void UpdateFilteredPages()
    {
        _filteredPages = string.IsNullOrWhiteSpace(_searchString) ? _pages.ToList() : _pages.Where(p => FilterFunc(p)).ToList();
        _filteredPages = (_sortColumn, _sortDirection) switch
        {
            ("code", "asc") => _filteredPages.OrderBy(p => p.Code).ToList(),
            ("code", "desc") => _filteredPages.OrderByDescending(p => p.Code).ToList(),
            ("name", "asc") => _filteredPages.OrderBy(p => p.Name).ToList(),
            ("name", "desc") => _filteredPages.OrderByDescending(p => p.Name).ToList(),
            ("url", "asc") => _filteredPages.OrderBy(p => p.Url).ToList(),
            ("url", "desc") => _filteredPages.OrderByDescending(p => p.Url).ToList(),
            ("description", "asc") => _filteredPages.OrderBy(p => p.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredPages.OrderByDescending(p => p.Description ?? string.Empty).ToList(),
            _ => _filteredPages // Preserve original order from API (descending by date)
        };
        _totalItems = _filteredPages.Count; _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;
        if (_currentPage > _totalPages) _currentPage = _totalPages; if (_currentPage < 1) _currentPage = 1;
        _pagedPages = _filteredPages.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    }

    private void OnSearchChanged(string value) { _searchString = value; _currentPage = 1; UpdateFilteredPages(); StateHasChanged(); }
    
    // Issue #3: Clear search method for X icon
    private void ClearSearch() { _searchString = string.Empty; _currentPage = 1; UpdateFilteredPages(); StateHasChanged(); }
    private void ToggleSort(string column) { if (_sortColumn == column) _sortDirection = _sortDirection == "asc" ? "desc" : "asc"; else { _sortColumn = column; _sortDirection = "asc"; } UpdateFilteredPages(); StateHasChanged(); }
    private bool FilterFunc(PageDto page) => string.IsNullOrWhiteSpace(_searchString) || page.Code.ToLower().Contains(_searchString.ToLower()) || page.Name.ToLower().Contains(_searchString.ToLower()) || page.Url.ToLower().Contains(_searchString.ToLower()) || (page.Description?.ToLower().Contains(_searchString.ToLower()) ?? false);
    private int GetGlobalSerialNumber(PageDto page) => _filteredPages.IndexOf(page) + 1;
    private string TruncateDescription(string? description) => string.IsNullOrEmpty(description) ? "-" : description.Length <= 50 ? description : description.Substring(0, 50) + "...";
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);
    private void GoToPage(int page) { if (page >= 1 && page <= _totalPages) { _currentPage = page; UpdateFilteredPages(); StateHasChanged(); } }
    async Task OpenAddDialog()
    {
        await JS.InvokeVoidAsync("disableScroll");
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");

        _selectedPage = null; _isEditMode = false; _pageModel = new PageFormDialog.PageFormModel(); _isDialogOpen = true;
    }
    async Task OpenEditDialog(PageDto page)
    {
        await JS.InvokeVoidAsync("disableScroll");
        _selectedPage = page; _isEditMode = true; _pageModel = new PageFormDialog.PageFormModel { Code = page.Code, Name = page.Name, Url = page.Url, Description = page.Description, DisplayOrder = page.DisplayOrder, MenuContext = page.MenuContext, IsActive = page.IsActive }; _isDialogOpen = true;
    }
    async Task OpenViewDialog(PageDto page)
    {
        await JS.InvokeVoidAsync("disableScroll");
        _selectedPage = page; _isOffcanvasOpen = true;
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");

    }
    async Task CloseDialog()
    {
        await JS.InvokeVoidAsync("enableScroll");
        _isDialogOpen = false; _selectedPage = null; _pageModel = new PageFormDialog.PageFormModel(); _isEditMode = false;
    }
    async Task CloseOffcanvas()
    {
        await JS.InvokeVoidAsync("enableScroll");
        _isOffcanvasOpen = false; _selectedPage = null;
    }

    private async Task HandleSubmit(PageFormDialog.PageFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedPage != null)
            {
                var updateRequest = new UpdatePageRequest { Id = _selectedPage.Id, Name = model.Name, Url = model.Url, Description = model.Description, DisplayOrder = model.DisplayOrder, MenuContext = model.MenuContext, IsActive = model.IsActive };
                var response = await RBACService.UpdatePageAsync(_selectedPage.Id, updateRequest);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Page updated successfully"); await LoadPages(); CloseDialog(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update page"));
            }
            else
            {
                var createRequest = new CreatePageRequest { Code = model.Code, Name = model.Name, Url = model.Url, Description = model.Description, DisplayOrder = model.DisplayOrder };
                var response = await RBACService.CreatePageAsync(createRequest);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Page created successfully"); await LoadPages(); CloseDialog(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create page"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error saving page"); await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}"); }
        finally
        {
            _isSaving = false; await JS.InvokeVoidAsync("enableScroll");
        }
    }

    private async Task DeletePage(PageDto page)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", "Delete Page", $"Are you sure you want to delete '{page.Name}'? This action cannot be undone.");
            if (confirmed)
            {
                var response = await RBACService.DeletePageAsync(page.Id);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Page deleted successfully"); await LoadPages(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete page"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error deleting page"); await JS.InvokeVoidAsync("showToast", "error", $"Error deleting page: {ex.Message}"); }
    }
