<div class="flex-grow-1">

    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else if (_hasError)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
            @_errorMessage
        </MudAlert>
    }
    else
    {
        <!-- Page Header -->
        <div class="page-header" >
            <h1 class="page-title">Departments List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#" class="breadcrumb-link">
                            <i class="ti tabler-home"></i> Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li>
                        <span class="breadcrumb-current">Departments List</span>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Data Grid -->
        <div class="department-container" id="DepartmentDarktheme">

            <!-- Toolbar -->
            <div class="toolbar-container" id="DepartmentDarktheme">
                <div class="toolbar-right">
                    <div class="search-box">
                        <input type="text"
                               class="search-input"
                               placeholder="Search Department"
                               value="@_searchString"
                               @oninput="e => OnSearchChanged(e.Value?.ToString() ?? string.Empty)" />

                        @if (string.IsNullOrEmpty(_searchString))
                        {
                            <i class="ti tabler-search search-icon"></i>
                        }
                    </div>

                    @if (_canAdd)
                    {
                        <button class="add-button"
                                @onclick="OpenAddDialog"
                                disabled="@_isSaving">
                            <i class="ti tabler-plus"></i>
                            <span>Add Department</span>
                        </button>
                    }
                </div>
            </div>

            <!-- Restriction Banner -->
            @if (!_isSuperAdmin && _userDepartmentName != null)
            {
                <div style="margin:16px 20px;padding:12px 16px;background:#e3f2fd;border-left:4px solid #2196f3;border-radius:4px;">
                    <div style="display:flex;align-items:center;gap:8px;">
                        <i class="ti tabler-info-circle" style="color:#2196f3;font-size:20px;"></i>
                        <span style="color:#1976d2;font-size:14px;">
                            <strong>Department View Restriction:</strong>
                            You are viewing departments for:
                            <strong>@_userDepartmentName</strong>
                        </span>
                    </div>
                </div>
            }

            <!-- Cards -->
            <div class="row g-4">

                @if (_pagedDepartments != null && _pagedDepartments.Any())
                {
                    @foreach (var department in _pagedDepartments)
                    {
                        var borderColor = GenerateRandomColor();

                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="dept-card">

                                <div class="Badges" style="background:@borderColor;">
                                    @department.CreatedAt.ToString("MMMdd")
                                </div>

                                <div class="Image">
                                    <img src="assets/img/avatars/Department.png" alt="Department" />
                                </div>

                                <h2 class="dept-name">@department.Name</h2>
                                <p class="dept-desc">@department.Description</p>

                                <div class="Actions" style="background:@borderColor;">
                                    <i class="ti tabler-eye"
                                       @onclick="() => OpenViewDialog(department)"></i>
                                    <i class="ti tabler-edit"
                                       @onclick="() => OpenEditDialog(department)"></i>
                                    <i class="ti tabler-trash"
                                       @onclick="() => DeleteDepartment(department)"></i>
                                </div>

                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <NoResultsFound Message="No departments found"
                                        IconClass="ti tabler-building-off"
                                        SearchTerm="@_searchString" />
                    </div>
                }

            </div>

            <!-- Pagination (ONLY when data exists) -->
            @if (_pagedDepartments != null && _pagedDepartments.Any())
            {
                <div class="pagination-container" id="DepartmentDarktheme">
                    <div class="pagination-controls">

                        <!-- Mobile -->
                        <div class="pagination-buttons mobile-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">@_currentPage</button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>

                        <!-- Web -->
                        <div class="pagination-buttons web-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                <button class="page-btn @(_currentPage == i ? "active" : "")"
                                        @onclick="() => GoToPage(i)">
                                    @i
                                </button>
                            }

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>

                    </div>
                </div>
            }

        </div>
    }

</div>

