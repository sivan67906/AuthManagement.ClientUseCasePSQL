            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Department Details
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Description:</b> @selectedFeature.Name</p>
                    <p><b>Description:</b> @selectedFeature.Description</p>
                </div>
            </div>
        </div>
    </div>


}



@code {

    private List<DepartmentDto> _departments = new();
    private List<DepartmentDto> _filteredDepartments = new();
    private List<DepartmentDto> _pagedDepartments = new();
    private DepartmentDto? _selectedDepartment;
    private DepartmentFormDialog.DepartmentFormModel _departmentModel = new();
    private bool _isLoading = true;
    private bool _isSaving = false;
    private bool _isDialogOpen = false;
    private bool _isOffcanvasOpen = false;
    private bool _isEditMode = false;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private string _searchString = string.Empty;
    private string _sortColumn = "";
    private string _sortDirection = "";

    // Pagination
    private int _currentPage = 1;
    private int _pageSize = 9; // Issue #5: Changed from 10 to 9 for 3 cards per row Ã— 3 rows
    private int _totalPages = 1;
    private int _totalItems = 0;

    // Permission flags
    private bool _canView = false;
    private bool _canAdd = false;
    private bool _canEdit = false;
    private bool _canDelete = false;
    
    // Issue #6: Button click handling
    private bool _isDeleting = false;

    // Department restriction tracking
    private bool _isSuperAdmin = false;
    private string? _userDepartmentName = null;
    private Random random = new Random();


    bool showPopup = false;
    DepartmentDto? selectedFeature;

    void closeSelectFeatures()
    {
        showPopup = false;
    }

    void ShowDetails(DepartmentDto feature)
    {
        selectedFeature = feature;
        showPopup = true;
    }

    void ClosePopup()
    {
        showPopup = false;
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

    private string GenerateRandomColor()
    {
        // Generate a random hex color
        // return $"#{random.Next(0x1000000):X6}";

        // Alternative: Generate RGB color
        return $"rgb({random.Next(256)}, {random.Next(256)}, {random.Next(256)})";
    }


    // pagination

    private (int start, int end) GetMobilePageRange()
    {
        //int windowSize = 2; // always show 2 page numbers

        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }



    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Department page initializing...");

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                Logger.LogWarning("User not authenticated, redirecting to login");
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/department");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            // Check if user is SuperAdmin and get department info
            _isSuperAdmin = await PermissionService.IsSuperAdminAsync();
            var (departmentId, departmentName) = await PermissionService.GetUserDepartmentAsync();
            _userDepartmentName = departmentName;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}, IsSuperAdmin: {IsSuperAdmin}, Department: {Department}",
                _canView, _canAdd, _canEdit, _canDelete, _isSuperAdmin, _userDepartmentName);

            await LoadDepartments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Department page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadDepartments()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            Logger.LogInformation("Loading departments...");
            var response = await RBACService.GetAllDepartmentsAsync();

            if (response.Success && response.Data != null)
            {
                _departments = response.Data;
                Logger.LogInformation("Loaded {Count} departments", _departments.Count);
                UpdateFilteredDepartments();
            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load departments";
                Logger.LogWarning("Failed to load departments: {Message}", _errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading departments");
            _hasError = true;
            _errorMessage = $"Error loading departments: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredDepartments()
    {
        // Filter
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredDepartments = _departments.ToList();
        }
        else
        {
            _filteredDepartments = _departments
                .Where(d => FilterFunc(d))
                .ToList();
        }

        // Sort - Fixed: Removed invalid lambda syntax with two parameters
        _filteredDepartments = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredDepartments.OrderBy(d => _departments.IndexOf(d)).ToList(),
            ("no", "desc") => _filteredDepartments.OrderByDescending(d => _departments.IndexOf(d)).ToList(),
            ("name", "asc") => _filteredDepartments.OrderBy(d => d.Name).ToList(),
            ("name", "desc") => _filteredDepartments.OrderByDescending(d => d.Name).ToList(),
            ("description", "asc") => _filteredDepartments.OrderBy(d => d.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredDepartments.OrderByDescending(d => d.Description ?? string.Empty).ToList(),
            _ => _filteredDepartments // Preserve original order from API (descending by date)
        };

        _totalItems = _filteredDepartments.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedDepartments = _filteredDepartments
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredDepartments();
        StateHasChanged();
    }

