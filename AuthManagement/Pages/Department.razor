@page "/department"
@using AuthManagement.Models
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Department> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS

<PageTitle>Department Management</PageTitle>

<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        /* margin-bottom: 16px; */
        padding-bottom: 0;
    }

    .page-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .breadcrumb-link:hover {
            text-decoration: underline;
        }

    .breadcrumb-current {
        color: #666;
    }

    /* Container */
    .department-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    /* Toolbar */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 20px;
        background: white;
        border-bottom: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 16px;
    }

    .toolbar-left {
        display: flex;
        align-items: center;
    }

        .toolbar-left::before {
            content: "";
            height: 21px;
            width: 0.2rem;
            inset-block-start: 0.15rem;
            inset-inline-start: -0.65rem;
            background: linear-gradient(to bottom, #26bf9491 50%, #97959e8a 50%);
            border-radius: 0.5rem;
        }

    .mappings-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-left: auto;
    }

    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-input {
        width: 100%;
        padding: 6px 36px 6px 12px;
        border: 1px solid #d9d9e3;
        border-radius: 6px;
        font-size: 13px;
    }

        .search-input:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
        }

    /* Issue #3 FIX: Search icon on RIGHT side */
    .search-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 18px;
    }
    
    .clear-icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 18px;
        cursor: pointer;
    }
    
    .clear-icon:hover {
        color: #666;
    }

    .add-button {
        background-color: var(--bs-primary);
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: background-color 0.2s;
        white-space: nowrap;
    }

        .add-button:hover {
            background-color: white;
            color: var(--bs-primary)
        }

        .add-button i {
            font-size: 18px;
        }

    /* Table */
    .department-table {
        width: 100%;
        border-collapse: collapse;
    }

        .department-table thead {
            background-color: #fafafa;
        }

        .department-table th {
            padding: 12px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            /* color: #666; */
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            user-select: none;
            color: black;
            background: white;
        }

            .department-table th:last-child {
                border-right: none;
            }

            .department-table th.sortable {
                position: relative;
                padding-right: 30px;
            }

                .department-table th.sortable:hover {
                    /* background-color: #f5f5f5; */
                }

    .sort-indicator {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .sort-arrow {
        width: 0;
        height: 0;
        border-left: 4px solid transparent;
        border-right: 4px solid transparent;
    }

        .sort-arrow.up {
            border-bottom: 5px solid #ccc;
        }

            .sort-arrow.up.active {
                border-bottom-color: #7c3aed;
            }

        .sort-arrow.down {
            border-top: 5px solid #ccc;
        }

            .sort-arrow.down.active {
                border-top-color: #7c3aed;
            }

    .department-table th.text-center {
        text-align: center;
    }

    .department-table tbody tr {
        transition: background-color 0.2s;
        border-bottom: 1px solid #f8f9fa;
    }

        .department-table tbody tr:hover {
            /* background-color: #f8f9fa; */
        }

    .departments-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
    }

    .department-table td {
        padding: 10px 16px;
        font-size: 14px;
        color: #333;
    }

    .department-table tbody tr:last-child {
        border-bottom: none;
    }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .department-name {
        color: #333;
        font-weight: 600;
    }

    .description-text {
        color: #666;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

        .action-btn i {
            font-size: 18px;
            display: block;
            line-height: 1;
        }

        .action-btn:hover {
            /* transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15); */
        }

        .action-btn.view-btn {
            background-color: #e3f2fd;
            color: #2196f3;
        }

            .action-btn.view-btn:hover {
                background-color: #2196f3;
                color: white;
            }

        .action-btn.edit-btn {
            background-color: #fff3e0;
            color: #ff9800;
        }

            .action-btn.edit-btn:hover {
                /* background-color: #ff9800; */
                color: #ff9800;
            }

        .action-btn.delete-btn {
            background-color: #ffebee;
            color: #dc3545;
        }

            .action-btn.delete-btn:hover {
                /* background-color: #dc3545; */
                color: #dc3545;
            }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 13px 0px;
        background: white;
        border-top: 1px solid #80808040;
        margin-bottom: 1px;
    }

    .pagination-info {
        font-size: 14px;
        color: #666;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-right: 16px;
    }

        .page-size-selector label {
            font-size: 14px;
            color: #666;
        }

        .page-size-selector select {
            padding: 4px 8px;
            border: 1px solid #d9d9e3;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

    .pagination-buttons {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .page-btn {
        min-width: 40px;
        height: 40px;
        padding: 0 8px;
        border: 1px solid #d9d9e373;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s;
        color: #333;
    }

        .page-btn:hover:not(:disabled) {
            background: #f5f5f5;
            border-color: var(--bs-primary);
            color: var(--bs-primary);
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .page-btn.active {
            color: white;
            border-color: var(--bs-primary);
            font-weight: 700;
            background: var(--bs-primary);
        }

    /* No Data */
    .no-data {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

        .no-data i {
            font-size: 48px;
            opacity: 0.3;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .toolbar-container {
            flex-direction: column;
            align-items: stretch;
        }

        .toolbar-left,
        .toolbar-right {
            width: 100%;
            justify-content: space-between;
        }

        .search-box {
            min-width: 100%;
        }
    }

    /* Issue #6: Offcanvas full text display */
    .offcanvas-title {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
        max-width: 100%;
    }
    
    .offcanvas-body p, .offcanvas-body div {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: pre-wrap;
    }
</style>

<div class="flex-grow-1" style="">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else if (_hasError)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
            @_errorMessage
        </MudAlert>
    }
    else
    {
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Departments List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">

                        <a href="#" class="breadcrumb-link">
                            <i class="ti tabler-home"></i>Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li class="">
                        <span class="breadcrumb-current">Departments List</span>
                    </li>
                </ul>
            </nav>
        </div>


        <style>
            .card-me {
                position: relative;
                /* overflow: hidden; */
                border-radius: 8px;
            }

            /* Contact content layout remains normal */
            .contact-action {
                position: relative;
                z-index: 1;
            }

            /* Hover buttons (overlay) */
            .contact-hover-buttons {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 10px;
                background: rgb(0 0 0 / 21%);
                opacity: 0;
                visibility: hidden;
                transform: scale(1.05);
                transition: all 0.25s ease-in-out;
            }

            /* Show on hover */
            .card-me:hover .contact-hover-buttons {
                opacity: 1;
                visibility: visible;
                transform: scale(1);
            }

            /* Optional overlay (fade) */
            .contact-overlay {
                position: absolute;
                inset: 0;
                /* background: rgba(0, 0, 0, 0.25); */
                opacity: 0;
                transition: opacity 0.25s;
            }

            .card-text {
                color: var(--bs-primary) !important;
                /* Issue #4: Truncate card text */
                max-width: 116px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                display: block;
            }
            
            .card-title {
                /* Issue #4: Truncate card description */
                max-width: 116px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                display: block;
            }

            .card-me:hover .contact-overlay {
                opacity: 1;
            }

            /* @@media(max-width:767px){
                            .grid{
                                grid-template-columns: repeat(auto-fill, minmax(238px, 100%)) !important;
                            }

                            .toolbar-left, .toolbar-right{
                                justify-content: flex-start !important;
                            }
                        } */
        </style>


        <!-- Data Grid -->
        <div class="department-container">
            <!-- Toolbar -->
            <div class="toolbar-container">
                <div class="toolbar-left">
                    <span class="departments-list-label">DEPARTMENTS LIST</span>
                </div>

                <div class="toolbar-right">
                    <div class="search-box">
                        <input type="text"
                               class="search-input"
                               placeholder="Search Department"
                               value="@_searchString"
                               @oninput="@((ChangeEventArgs e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                        @if (string.IsNullOrEmpty(_searchString))
                        {
                            <i class="ti tabler-search search-icon"></i>
                        }
                        @* else
                        {
                            <i class="ti tabler-x clear-icon" @onclick="ClearSearch"></i>
                        } *@
                    </div>
                    @if (_canAdd)
                    {
                        <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                            <i class="ti tabler-plus"></i>
                            <span>Add Department</span>
                        </button>
                    }
                </div>
            </div>

            @* Department Restriction Info Banner *@
            @if (!_isSuperAdmin && _userDepartmentName != null)
            {
                <div style="margin: 16px 20px; padding: 12px 16px; background-color: #e3f2fd; border-left: 4px solid #2196f3; border-radius: 4px;">
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <i class="ti tabler-info-circle" style="color: #2196f3; font-size: 20px;"></i>
                        <span style="color: #1976d2; font-size: 14px;">
                            <strong>Department View Restriction:</strong> You are viewing departments for your department only: <strong>@_userDepartmentName</strong>
                        </span>
                    </div>
                </div>
            }

            <!-- Table -->
            <div>
                <div class="card-body" style="margin-bottom: 28px;
            padding-top: 28px;
            padding-left: 22px;
            padding-right: 22px;">
                    <div class="row g-3">
                        @if (_pagedDepartments.Any())
                        {
                            @foreach (var department in _pagedDepartments)
                            {
                                string borderColor = GenerateRandomColor();

                                <div class="col-12 col-md-6 col-lg-4 custom-border-inline-start">
                                    <div class="card custom-card card-me" style="border-top:2px solid @borderColor !important;height: 100%;">
                                        <div class="card-body contact-action">
                                            <!--!-->
                                            <div class="contact-overlay"></div>
                                            <div class="d-flex align-items-top position-relative">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <span class="avatar avatar-xl">
                                                            <img src="assets/img/avatars/Department.png"
                                                                 alt="Melissa Jane" style="border-radius: 5px;    width: 97px;">
                                                        </span>
                                                    </div><!--!-->
                                                    <div>
                                                        <p class="card-text text-info mb-1 fs-14 fw-semibold" title="@department.Name">@department.Name</p><!--!-->
                                                        <div class="card-title fs-12 mb-1" title="@department.Description">@department.Description</div>
                                                    </div>
                                                </div>
                                            </div><!--!-->
                                            <div class="d-flex align-items-center justify-content-center gap-2 contact-hover-buttons">
                                                <button type="button" class="action-btn view-btn" @onclick="@(() => OpenViewDialog(department))"
                                                        title="View" style="font-size:15px;" disabled="@_isDeleting">
                                                    <!--!--><i class="ti tabler-eye"></i>
                                                </button><!--!-->
                                                @if (_canEdit)
                                                {
                                                    <button class="action-btn edit-btn"
                                                            @onclick="@(() => OpenEditDialog(department))"
                                                            title="Edit" style="font-size:15px;" disabled="@(_isSaving || _isDeleting)">
                                                        <i class="ti tabler-edit"></i>
                                                    </button>
                                                }

                                                @if (_canDelete)
                                                {
                                                    <button class="action-btn delete-btn"
                                                            @onclick="@(() => DeleteDepartment(department))"
                                                            title="Delete" style="font-size:15px;" disabled="@_isDeleting">
                                                        <i class="ti tabler-trash"></i>
                                                    </button>
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                        else
                        {
                            @* Issue #3: Show NoResultsFound component when no departments match *@
                            <div class="col-12">
                                <NoResultsFound Message="No departments found" 
                                               IconClass="ti tabler-building-off"
                                               SearchTerm="@_searchString" />
                            </div>
                        }
                    </div><!--!-->

                </div>

            </div>


            <div class="pagination-container">
                @* <div class="pagination-info">
                    Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
                </div> *@
                <div class="pagination-controls">

                    @* mobile  screen *@

                    @{
                        var range = GetMobilePageRange();
                    }

                    <div class="pagination-buttons mobile-only">

                        <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                            <i class="bi bi-chevron-bar-left"></i>
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                            <i class="ti tabler-chevron-left"></i>
                        </button>

                        <button class="page-btn active">
                            @_currentPage
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                            <i class="ti tabler-chevron-right"></i>
                        </button>

                        <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                            <i class="bi bi-chevron-bar-right"></i>
                        </button>

                    </div>



                    <div class="pagination-buttons web-Only">
                        <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                            <i class="bi bi-chevron-bar-left"></i>
                        </button>
                        <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                            <i class="ti tabler-chevron-left"></i>
                        </button>

                        @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                        {
                            var pageNum = i;
                            <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                    @onclick="() => GoToPage(pageNum)">
                                @pageNum
                            </button>
                        }

                        <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                            <i class="ti tabler-chevron-right"></i>
                        </button>
                        <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                            <i class="bi bi-chevron-bar-right"></i>
                        </button>
                    </div>
                </div>
            </div>



        </div>
    }
</div>

<!-- Department Form Dialog -->
