    private async Task HandleSubmit(DepartmentFormDialog.DepartmentFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedDepartment != null)
            {
                var updateRequest = new UpdateDepartmentRequest
                {
                    Id = _selectedDepartment.Id,
                    Name = model.Name,
                    Description = model.Description
                };

                var response = await RBACService.UpdateDepartmentAsync(_selectedDepartment.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department updated successfully");
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update department"));
                }
            }
            else
            {
                var createRequest = new CreateDepartmentRequest
                {
                    Name = model.Name,
                    Description = model.Description
                };

                var response = await RBACService.CreateDepartmentAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department created successfully");
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create department"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving department");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteDepartment(DepartmentDto department)
    {
        if (_isDeleting) return; // Issue #6: Prevent double-click
        
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Department",
                $"Are you sure you want to delete '{department.Name}'? This action cannot be undone.");

            if (confirmed)
            {
                _isDeleting = true; // Issue #6: Disable buttons
                StateHasChanged();
                
                var response = await RBACService.DeleteDepartmentAsync(department.Id);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department deleted successfully");
                    await LoadDepartments();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete department"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting department");
            await JS.InvokeVoidAsync("showToast", "error", $"Error deleting department: {ex.Message}");
        }
        finally
        {
            _isDeleting = false; // Issue #6: Re-enable buttons
            StateHasChanged();
        }
    }
