@page "/testproducts"
@using AuthManagement.Models
@using AuthManagement.Services
@using AuthManagement.Shared
@inject TestEntityService TestEntityService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<TestProducts> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<PageTitle>Test Products - RBAC Testing</PageTitle>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0;
    }

    .page-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

    .breadcrumb-link:hover {
        text-decoration: underline;
    }

    .breadcrumb-current {
        color: #666;
    }

    .test-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        padding-left: 21px;
        padding-bottom: 21px;
        padding-right: 21px;
    }

    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0px;
        background: white;
        border-bottom: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 16px;
    }

    .toolbar-left {
        display: flex;
        align-items: center;
    }

    .toolbar-left::before {
        content: "";
        height: 21px;
        width: 0.2rem;
        inset-block-start: 0.15rem;
        inset-inline-start: -0.65rem;
        background: linear-gradient(to bottom, #26bf9491 50%, #97959e8a 50%);
        border-radius: 0.5rem;
    }

    .test-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
        margin-bottom:0;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .search-input {
        width: 260px;
        padding: 8px 16px;
        border: 1px solid #d9d9e3;
        border-radius: 6px;
        font-size: 14px;
    }

    .search-input:focus {
        outline: none;
        border-color: #7c3aed;
        box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
    }

    .add-button {
        padding: 8px 16px;
        background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 2px 4px rgba(124, 58, 237, 0.2);
    }

    .add-button:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(124, 58, 237, 0.3);
    }

    .test-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: white;
        border: 1px solid #80808054;
        border-bottom: 0;
    }

    .test-table thead th {
            position: relative;
            padding: 7px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #0000002b;
            cursor: pointer;
            user-select: none;
            color: black;
            background: transparent;
    }

    .test-table thead th:hover {
        background: #f3f4f6;
    }

    .test-table thead th.sortable::after {
        content: '⇅';
        position: absolute;
        right: 8px;
        opacity: 0.3;
    }

    .test-table thead th.sorted-asc::after {
        content: '↑';
        opacity: 1;
        color: #7c3aed;
    }

    .test-table thead th.sorted-desc::after {
        content: '↓';
        opacity: 1;
        color: #7c3aed;
    }

    .test-table tbody tr {
        transition: background-color 0.2s;
        border-bottom: 1px solid #6d6d6d54;
    }

    .test-table tbody tr:hover {
        background-color: #f9fafb;
    }

    .test-table td {
            padding: 7px 16px;
            font-size: 12px;
            color: #333;
            border-bottom: 1px solid #8080805c;
    }

    .test-table tbody tr:last-child {
        border-bottom: none;
    }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .product-name {
        color: #333;
        font-weight: 600;
    }

    .description-text {
        color: #666;
    }

    .price-text {
        color: #10b981;
        font-weight: 600;
    }

    .stock-text {
        color: #6b7280;
    }

    .badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 7px;
        font-size: 10px;
        font-weight: 500;
    }

    .badge-success {
        background-color: #d1fae5;
        color: #065f46;
    }

    .badge-secondary {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

    .action-btn i {
        font-size: 14px;
        display: block;
        line-height: 1;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .action-btn.view-btn {
        background-color: #e3f2fdcf;
        color: #2196f3;
    }

    .action-btn.view-btn:hover {
        background-color: #2196f3;
        color: white;
    }

    .action-btn.edit-btn {
        background-color: #fff3e0ad;
        color: #ff9800;
    }

    .action-btn.edit-btn:hover {
        background-color: #ff9800;
        color: white;
    }

    .action-btn.delete-btn {
        background-color: #ffebee94;
        color: #f44336;
    }

    .action-btn.delete-btn:hover {
        background-color: #f44336;
        color: white;
    }


    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 13px 0px;
        background: white;
        border-left: 1px solid #80808047;
        margin-bottom: 1px;
        border-right: 1px solid #80808047;
        border-bottom: 1px solid #80808047;
    }




    .pagination-info {
        font-size: 14px;
        color: #666;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-right: 16px;
    }

        .page-size-selector label {
            font-size: 14px;
            color: #666;
        }

        .page-size-selector select {
            padding: 4px 8px;
            border: 1px solid #d9d9e3;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

    .pagination-buttons {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .page-btn {
        min-width: 40px;
        height: 40px;
        padding: 0 8px;
        border: 1px solid #d9d9e373;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s;
        color: #333;
    }

        .page-btn:hover:not(:disabled) {
            background: #f5f5f5;
            border-color: var(--bs-primary);
            color: var(--bs-primary);
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .page-btn.active {
            color: white;
            border-color: var(--bs-primary);
            font-weight: 700;
            background: var(--bs-primary);
        }



    /* Loading & Error */
    .loading-container, .error-container {
        padding: 40px;
        text-align: center;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border: 0.25em solid #7c3aed;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spinner-border 0.75s linear infinite;
    }

    @@keyframes spinner-border {
        to { transform: rotate(360deg); }
    }

    /* Alert Banner */
    .alert-banner {
        padding: 11px 18px;
        margin-bottom: 18px;
        border-left: 3px solid;
        font-size: 12px;
    }

    .alert-warning {
        background-color: #fef3c7;
        border-left-color: #f59e0b;
        color: #92400e;
    }

    .alert-info {
        background-color: #dbeafe6b;
        border-left-color: #3b82f6;
        color: #1e40af;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .search-input {
            width: 100%;
        }

        .toolbar-container {
            flex-direction: column;
            align-items: stretch;
        }

        .toolbar-left, .toolbar-right {
            width: 100%;
            justify-content: flex-start;
        }

        .pagination-container {
            flex-direction: column;
        }

        .test-table {
            font-size: 12px;
        }

        .test-table td, .test-table th {
            padding: 8px;
        }
    }

    /* Issue #6: Offcanvas full text display */
    .offcanvas-title {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
        max-width: 100%;
    }
    
    .offcanvas-body p, .offcanvas-body div {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: pre-wrap;
    }
</style>

