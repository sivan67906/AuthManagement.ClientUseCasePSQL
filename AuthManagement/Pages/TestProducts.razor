@if (!_canView)
{
    <div class="alert-banner alert-warning">
        <i class="ti tabler-alert-triangle"></i>
        <strong>Access Denied:</strong> You don't have permission to view test products.
    </div>
}
else
{
    <div class="alert-banner alert-info">
        <i class="ti tabler-info-circle"></i>
        <strong>RBAC Testing Page:</strong> This is a sample page to test role-based access control. 
        Your permissions: View=<strong>@_canView</strong>, Add=<strong>@_canAdd</strong>, Edit=<strong>@_canEdit</strong>, Delete=<strong>@_canDelete</strong>
    </div>

    <div class="test-container">
        <div class="toolbar-container">
            <div class="toolbar-left">
                <h5 class="test-label">Products List</h5>
            </div>
            <div class="toolbar-right">
                <div class="search-box" style="position: relative; min-width: 280px;">
                    <input type="text" class="search-input" placeholder="Search products..." style="padding-right: 36px;"
                           value="@_searchString"
                           @oninput="@((ChangeEventArgs e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    @if (string.IsNullOrEmpty(_searchString))
                    {
                        <i class="ti tabler-search search-icon" style="position: absolute; right: 12px; top: 50%; transform: translateY(-50%); color: #999;"></i>
                    }
                    @* else
                    {
                        <i class="ti tabler-x clear-icon" @onclick="ClearSearch"></i>
                    } *@
                </div>
                @if (_canAdd)
                {
                    <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                        <i class="ti tabler-plus"></i>
                        Add Product
                    </button>
                }
            </div>
        </div>

        @if (_isLoading)
        {
            <div class="loading-container">
                <div class="spinner-border"></div>
                <p style="margin-top: 16px; color: #666;">Loading products...</p>
            </div>
        }
        else if (_hasError)
        {
            <div class="error-container">
                <i class="ti tabler-alert-circle" style="font-size: 48px; color: #f44336;"></i>
                <h5 style="margin-top: 16px; color: #333;">Error Loading Data</h5>
                <p style="color: #666;">@_errorMessage</p>
                <button class="add-button" @onclick="LoadProducts" style="margin-top: 16px;">
                    <i class="ti tabler-refresh"></i>
                    Retry
                </button>
            </div>
        }
        else
        {
            <table class="test-table" id="test-Product">
                <thead>
                    <tr>
                        <th class="plusHeading"></th>

                        <th style="width: 60px;">#</th>
                        <th class="sortable @(_sortColumn == "name" ? (_sortDirection == "asc" ? "sorted-asc" : "sorted-desc") : "")" @onclick='() => ToggleSort("name")'>Product Name</th>
                        <th class="sortable @(_sortColumn == "description" ? (_sortDirection == "asc" ? "sorted-asc" : "sorted-desc") : "")" @onclick='() => ToggleSort("description")'>Description</th>
                        <th class="sortable @(_sortColumn == "price" ? (_sortDirection == "asc" ? "sorted-asc" : "sorted-desc") : "")" @onclick='() => ToggleSort("price")' style="width: 120px;">Price</th>
                        <th class="sortable @(_sortColumn == "stock" ? (_sortDirection == "asc" ? "sorted-asc" : "sorted-desc") : "")" @onclick='() => ToggleSort("stock")' style="width: 100px;">Stock</th>
                        <th style="width: 100px;">Status</th>
                        @if (_canView || _canEdit || _canDelete)
                        {
                            <th style="width: 150px; text-align: center;">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (_pagedProducts.Any())
                    {
                        @foreach (var product in _pagedProducts)
                        {
                            <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(product))">
                                    <div class="plus" style="border-radius: 50%;
                                                        display: flex;
                                                        align-items: center;
                                                        justify-content: center;
                                                        box-sizing: content-box;
                                                        border: 2px solid var(--bs-paper-bg);
                                                        background-color: var(--bs-primary);
                                                        block-size: .85rem;
                                                        box-shadow: 0 0 3px var(--bs-gray-800);
                                                        color: var(--bs-white);    width: 17px;
                                            height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>
                                <td class="serial-number">@GetGlobalSerialNumber(product)</td>
                                <td class="product-name">@product.Name</td>
                                <td class="description-text">@product.Description</td>
                                <td class="price-text">$@product.Price.ToString("N2")</td>
                                <td class="stock-text">@product.Stock</td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge badge-success" style="   border-radius: 4px;">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary" style="   border-radius: 4px;">Inactive</span>
                                    }
                                </td>
                                @if (_canView || _canEdit || _canDelete)
                                {
                                    <td>
                                        <div class="action-buttons">
                                            @if (_canView)
                                            {
                                                <button class="action-btn view-btn" @onclick="() => OpenViewOffcanvas(product)" title="View Details">
                                                    <i class="ti tabler-eye"></i>
                                                </button>
                                            }
                                            @if (_canEdit)
                                            {
                                                <button class="action-btn edit-btn" @onclick="() => OpenEditDialog(product)" title="Edit">
                                                    <i class="ti tabler-edit"></i>
                                                </button>
                                            }
                                            @if (_canDelete)
                                            {
                                                <button class="action-btn delete-btn" @onclick="() => DeleteProduct(product)" title="Delete">
                                                    <i class="ti tabler-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="10" style="border: none; padding: 0;"><NoResultsFound Message="No products found" SearchTerm="@_searchString" /></td></tr>
                    }
                </tbody>
            </table>

            @if (_pagedProducts.Any())
            {

                <div class="pagination-container">
                    @* <div class="pagination-info">
          Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
      </div> *@
                    <div class="pagination-controls">

                        @* mobile  screen *@

                        @{
                            var range = GetMobilePageRange();
                        }

                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>



                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}




