                       IsEditMode="_isEditMode"
                       IsSaving="_isSaving"
                       Model="_productModel"
                       OnSubmit="HandleSubmit"
                       OnCancel="CloseDialog" />

<TestProductDetailsOffcanvas IsOpen="_isOffcanvasOpen"
                             Product="_selectedProduct"
                             OnClose="CloseOffcanvas" />

@code {

    private List<TestProductDto> _products = new();
    private List<TestProductDto> _filteredProducts = new();
    private List<TestProductDto> _pagedProducts = new();
    private TestProductDto? _selectedProduct;
    private TestProductFormDialog.ProductFormModel _productModel = new();
    private bool _isLoading = true, _isSaving = false, _hasError = false, _isDialogOpen = false, _isOffcanvasOpen = false, _isEditMode = false;
    private string _errorMessage = string.Empty, _searchString = string.Empty, _sortColumn = "", _sortDirection = "";
    private int _currentPage = 1, _pageSize = 9, _totalItems = 0, _totalPages = 1;
    private bool _canView, _canAdd, _canEdit, _canDelete;

    bool showPopup = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

// pagination

    private (int start, int end) GetMobilePageRange()
    {
        //int windowSize = 2;

        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }

    void closeSelectFeatures()
    {
        showPopup=false;
    }


    void ShowDetails(TestProductDto productDto)
    {
        _selectedProduct = productDto;
        showPopup = true;
    }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            // Get permissions for this page
            var permissions = await PermissionService.GetPagePermissionsAsync("/testproducts");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            if (_canView)
            {
                await LoadProducts();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Test Products page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadProducts()
    {
        _isLoading = true;
        _hasError = false;
        try
        {
            var response = await TestEntityService.GetAllProductsAsync();
            if (response.Success && response.Data != null)
            {
                _products = response.Data;
                UpdateFilteredProducts();
            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load products";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading products");
            _hasError = true;
            _errorMessage = $"Error loading products: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredProducts()
    {
        _filteredProducts = string.IsNullOrWhiteSpace(_searchString)
            ? _products.ToList()
            : _products.Where(p => FilterFunc(p)).ToList();

        _filteredProducts = (_sortColumn, _sortDirection) switch
        {
            ("name", "asc") => _filteredProducts.OrderBy(p => p.Name).ToList(),
            ("name", "desc") => _filteredProducts.OrderByDescending(p => p.Name).ToList(),
            ("description", "asc") => _filteredProducts.OrderBy(p => p.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredProducts.OrderByDescending(p => p.Description ?? string.Empty).ToList(),
            ("price", "asc") => _filteredProducts.OrderBy(p => p.Price).ToList(),
            ("price", "desc") => _filteredProducts.OrderByDescending(p => p.Price).ToList(),
            ("stock", "asc") => _filteredProducts.OrderBy(p => p.Stock).ToList(),
            ("stock", "desc") => _filteredProducts.OrderByDescending(p => p.Stock).ToList(),
            _ => _filteredProducts.OrderBy(p => p.Name).ToList()
        };

        _totalItems = _filteredProducts.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages) _currentPage = _totalPages;
        if (_currentPage < 1) _currentPage = 1;

        _pagedProducts = _filteredProducts.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredProducts();
        StateHasChanged();
    }

    // Issue #3: Clear search method for X icon
    private void ClearSearch()
    {
        _searchString = string.Empty;
        _currentPage = 1;
        UpdateFilteredProducts();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredProducts();
        StateHasChanged();
    }

    private bool FilterFunc(TestProductDto product)
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return true;
        var search = _searchString.ToLower();
        return product.Name.ToLower().Contains(search) ||
               (product.Description?.ToLower().Contains(search) ?? false) ||
               product.Price.ToString().Contains(search) ||
               product.Stock.ToString().Contains(search);
    }

    private int GetGlobalSerialNumber(TestProductDto product) => _filteredProducts.IndexOf(product) + 1;
    private string TruncateDescription(string? description) => string.IsNullOrEmpty(description) ? "-" : description.Length <= 50 ? description : description.Substring(0, 50) + "...";
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredProducts();
            StateHasChanged();
        }
    }

