    private async Task HandleSubmit(TestProductFormDialog.ProductFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedProduct != null)
            {
                var updateRequest = new UpdateTestProductRequest
                {
                    Id = _selectedProduct.Id,
                    Name = model.Name,
                    Description = model.Description,
                    Price = model.Price,
                    Stock = model.Stock,
                    IsActive = model.IsActive
                };

                var response = await TestEntityService.UpdateProductAsync(_selectedProduct.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Product updated successfully", Severity.Success);
                    await LoadProducts();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to update product", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateTestProductRequest
                {
                    Name = model.Name,
                    Description = model.Description,
                    Price = model.Price,
                    Stock = model.Stock,
                    IsActive = model.IsActive
                };

                var response = await TestEntityService.CreateProductAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Product created successfully", Severity.Success);
                    await LoadProducts();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to create product", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving product");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

