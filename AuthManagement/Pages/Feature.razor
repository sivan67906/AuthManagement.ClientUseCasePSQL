@code {


    private List<FeatureDto> _features = new();
    private List<FeatureDto> _filteredFeatures = new();
    private List<FeatureDto> _pagedFeatures = new();
    private FeatureDto? _selectedFeature;
    private FeatureFormDialog.FeatureFormModel _featureModel = new();
    private bool _isLoading = true, _isSaving = false, _hasError = false, _isDialogOpen = false, _isOffcanvasOpen = false, _isEditMode = false;
    private string _errorMessage = string.Empty, _searchString = string.Empty, _sortColumn = "", _sortDirection = "";
    private int _currentPage = 1, _pageSize = 9, _totalItems = 0, _totalPages = 1; // Issue #5: Changed from 10 to 9
    private bool _canView, _canAdd, _canEdit, _canDelete;
    private bool _isDeleting = false; // Issue #6: Button disable state

    bool showPopup = false;
    FeatureDto? selectedFeature;
    private Random random = new Random();

    void closeSelectFeatures()
    {
        showPopup=false;
    }

    void ShowDetails(FeatureDto feature)  
    {
        selectedFeature = feature;
        showPopup = true;
    }

    void ClosePopup()
    {
        showPopup = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

    private string GenerateRandomColor()
    {
        // Generate a random hex color
        // return $"#{random.Next(0x1000000):X6}";

        // Alternative: Generate RGB color
        return $"rgb({random.Next(256)}, {random.Next(256)}, {random.Next(256)})";
    }


    // pagination

    private (int start, int end) GetMobilePageRange()
    {
        //int windowSize = 2; // always show 2 page numbers

        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }

    private Dictionary<Guid, string> FeaturesColors = new();


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true) { NavigationManager.NavigateTo("/login"); return; }
            var permissions = await PermissionService.GetPagePermissionsAsync("/feature");
            _canView = permissions.CanView; _canAdd = permissions.CanAdd; _canEdit = permissions.CanEdit; _canDelete = permissions.CanDelete;
            await LoadFeatures();
        }
        catch (Exception ex) { Logger.LogError(ex, "Error initializing Feature page"); _hasError = true; _errorMessage = $"Error initializing page: {ex.Message}"; _isLoading = false; }
    }

    private async Task LoadFeatures()
    {
        _isLoading = true; _hasError = false;
        try
        {
            var response = await RBACService.GetAllFeaturesAsync();
            if (response.Success && response.Data != null) { _features = response.Data; UpdateFilteredFeatures(); }
            else { _hasError = true; _errorMessage = response.Message ?? "Failed to load features"; }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error loading features"); _hasError = true; _errorMessage = $"Error loading features: {ex.Message}"; }
        finally { _isLoading = false; }
    }

    private void UpdateFilteredFeatures()
    {
        _filteredFeatures = string.IsNullOrWhiteSpace(_searchString) ? _features.ToList() : _features.Where(f => FilterFunc(f)).ToList();
        _filteredFeatures = (_sortColumn, _sortDirection) switch
        {
            ("name", "asc") => _filteredFeatures.OrderBy(f => f.Name).ToList(),
            ("name", "desc") => _filteredFeatures.OrderByDescending(f => f.Name).ToList(),
            ("description", "asc") => _filteredFeatures.OrderBy(f => f.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredFeatures.OrderByDescending(f => f.Description ?? string.Empty).ToList(),
            ("routeurl", "asc") => _filteredFeatures.OrderBy(f => f.RouteUrl ?? string.Empty).ToList(),
            ("routeurl", "desc") => _filteredFeatures.OrderByDescending(f => f.RouteUrl ?? string.Empty).ToList(),
            _ => _filteredFeatures // Preserve original order from API (descending by date)
        };
        _totalItems = _filteredFeatures.Count; _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;
        if (_currentPage > _totalPages) _currentPage = _totalPages; if (_currentPage < 1) _currentPage = 1;
        _pagedFeatures = _filteredFeatures.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
        foreach (var dept in _pagedFeatures)
        {
            if (!FeaturesColors.ContainsKey(dept.Id))
            {
                FeaturesColors[dept.Id] = GenerateRandomColor();
            }
        }
    }

    private void OnSearchChanged(string value) { _searchString = value; _currentPage = 1; UpdateFilteredFeatures(); StateHasChanged(); }
    
    // Issue #3: Clear search method for X icon
    private void ClearSearch() { _searchString = string.Empty; _currentPage = 1; UpdateFilteredFeatures(); StateHasChanged(); }
    
    private void ToggleSort(string column) { if (_sortColumn == column) _sortDirection = _sortDirection == "asc" ? "desc" : "asc"; else { _sortColumn = column; _sortDirection = "asc"; } UpdateFilteredFeatures(); StateHasChanged(); }
    private bool FilterFunc(FeatureDto feature) => string.IsNullOrWhiteSpace(_searchString) || feature.Name.ToLower().Contains(_searchString.ToLower()) || (feature.Description?.ToLower().Contains(_searchString.ToLower()) ?? false) || (feature.RouteUrl?.ToLower().Contains(_searchString.ToLower()) ?? false);
    private int GetGlobalSerialNumber(FeatureDto feature) => _filteredFeatures.IndexOf(feature) + 1;
    private string TruncateDescription(string? description) => string.IsNullOrEmpty(description) ? "-" : description.Length <= 50 ? description : description.Substring(0, 50) + "...";
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);
    private void GoToPage(int page) { if (page >= 1 && page <= _totalPages) { _currentPage = page; UpdateFilteredFeatures(); StateHasChanged(); } }
