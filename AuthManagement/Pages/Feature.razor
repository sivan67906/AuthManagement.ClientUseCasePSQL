    private async Task HandleSubmit(FeatureFormDialog.FeatureFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedFeature != null)
            {
                var updateRequest = new UpdateFeatureRequest { Id = _selectedFeature.Id, Name = model.Name, Description = model.Description, RouteUrl = model.RouteUrl, IsMainMenu = model.IsMainMenu, ParentFeatureId = model.ParentFeatureId, DisplayOrder = model.DisplayOrder, Level = model.Level, Icon = model.Icon };
                var response = await RBACService.UpdateFeatureAsync(_selectedFeature.Id, updateRequest);

                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Feature updated successfully");
                    await LoadFeatures();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update feature"));
                }
            }

                else

                {

                    var createRequest = new CreateFeatureRequest { Name = model.Name, Description = model.Description, RouteUrl = model.RouteUrl, IsMainMenu = model.IsMainMenu, ParentFeatureId = model.ParentFeatureId, DisplayOrder = model.DisplayOrder, Level = model.Level, Icon = model.Icon };

                    var response = await RBACService.CreateFeatureAsync(createRequest);

                    if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Feature created successfully"); await LoadFeatures(); CloseDialog(); }

                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create feature"));

                }
            }
        catch (Exception ex) { Logger.LogError(ex, "Error saving feature"); await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}"); }
        finally
        {
            _isSaving = false; await JS.InvokeVoidAsync("enableScroll");
        }
    }

    private async Task DeleteFeature(FeatureDto feature)
    {
        _isDeleting = true;
        StateHasChanged();
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", "Delete Feature", $"Are you sure you want to delete '{feature.Name}'? This action cannot be undone.");
            if (confirmed)
            {
                var response = await RBACService.DeleteFeatureAsync(feature.Id);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Feature deleted successfully"); await LoadFeatures(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete feature"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error deleting feature"); await JS.InvokeVoidAsync("showToast", "error", $"Error deleting feature: {ex.Message}"); }
        finally { _isDeleting = false; StateHasChanged(); }
    }
