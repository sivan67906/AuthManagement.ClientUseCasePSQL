@code {

    private List<RoleDto> _roles = new();
    private List<RoleDto> _filteredRoles = new();
    private List<RoleDto> _pagedRoles = new();
    private List<DepartmentDto> _departments = new();
    private RoleDto? _selectedRole;
    private RoleFormDialog.RoleFormModel _roleModel = new();
    private bool _isLoading = true;
    private bool _isSaving = false;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private bool _isDialogOpen = false;
    private bool _isOffcanvasOpen = false;
    private bool _isEditMode = false;

    // Permissions
    private bool _canView = false;
    private bool _canAdd = false;
    private bool _canEdit = false;
    private bool _canDelete = false;

    // Search and Pagination
    private string _searchString = string.Empty;
    private int _currentPage = 1;
    private int _pageSize = 9;
    private int _totalItems = 0;
    private int _totalPages = 1;

    // Sorting
    private string _sortColumn = "";
    private string _sortDirection = "";


     bool showPopup = false;
 RoleDto? selectedFeature;

 void closeSelectFeatures()
 {
     showPopup=false;
 }

    void ShowDetails(RoleDto feature)
 {
     selectedFeature = feature;
     showPopup = true;
 }

 void ClosePopup()
 {
     showPopup = false;
 }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }


    // pagination

    private (int start, int end) GetMobilePageRange()
    {
        //int windowSize = 2; // always show 2 page numbers

        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/role");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canAdd, _canEdit, _canDelete);

            await LoadRoles();
            await LoadDepartments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Role page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadRoles()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            Logger.LogInformation("Loading roles...");
            var response = await RBACService.GetAllRolesAsync();

            if (response.Success && response.Data != null)
            {
                _roles = response.Data;
                Logger.LogInformation("Loaded {Count} roles", _roles.Count);
                UpdateFilteredRoles();
            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load roles";
                Logger.LogWarning("Failed to load roles: {Message}", _errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading roles");
            _hasError = true;
            _errorMessage = $"Error loading roles: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadDepartments()
    {
        try
        {
            var response = await RBACService.GetAllDepartmentsAsync();
            if (response.Success && response.Data != null)
            {
                _departments = response.Data;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading departments");
        }
    }

    private void UpdateFilteredRoles()
    {
        // Filter
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredRoles = _roles.ToList();
        }
        else
        {
            _filteredRoles = _roles
                .Where(r => FilterFunc(r))
                .ToList();
        }

        // Sort
        _filteredRoles = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredRoles.OrderBy(r => _roles.IndexOf(r)).ToList(),
            ("no", "desc") => _filteredRoles.OrderByDescending(r => _roles.IndexOf(r)).ToList(),
            ("name", "asc") => _filteredRoles.OrderBy(r => r.Name).ToList(),
            ("name", "desc") => _filteredRoles.OrderByDescending(r => r.Name).ToList(),
            ("department", "asc") => _filteredRoles.OrderBy(r => r.DepartmentName ?? string.Empty).ToList(),
            ("department", "desc") => _filteredRoles.OrderByDescending(r => r.DepartmentName ?? string.Empty).ToList(),
            ("description", "asc") => _filteredRoles.OrderBy(r => r.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredRoles.OrderByDescending(r => r.Description ?? string.Empty).ToList(),
            _ => _filteredRoles // Preserve original order from API (descending by date)
        };

        _totalItems = _filteredRoles.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedRoles = _filteredRoles
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredRoles();
        StateHasChanged();
    }

    // Issue #3: Clear search method for X icon
    private void ClearSearch()
    {
        _searchString = string.Empty;
        _currentPage = 1;
        UpdateFilteredRoles();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredRoles();
        StateHasChanged();
    }

    private bool FilterFunc(RoleDto role)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        var searchLower = _searchString.ToLower();
        return role.Name.ToLower().Contains(searchLower) ||
               (role.Description?.ToLower().Contains(searchLower) ?? false) ||
               (role.DepartmentName?.ToLower().Contains(searchLower) ?? false);
    }

    private int GetGlobalSerialNumber(RoleDto role)
    {
        var index = _filteredRoles.IndexOf(role);
        return index + 1;
    }

    private string TruncateDescription(string? description)
    {
        if (string.IsNullOrEmpty(description))
            return "-";

        if (description.Length <= 50)
            return description;

        return description.Substring(0, 50) + "...";
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredRoles();
            StateHasChanged();
        }
    }

