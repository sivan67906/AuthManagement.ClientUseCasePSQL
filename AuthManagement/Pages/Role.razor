    private async Task HandleSubmit(RoleFormDialog.RoleFormModel model)
    {
        _isSaving = true;
        try
        {
            // Issue #10: Check if department is not selected (System Role)
            if (!_isEditMode && (model.DepartmentId == null || model.DepartmentId == Guid.Empty))
            {
                var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
                    "You are trying to add System Roles. Do you want to continue?");
                
                if (!confirmed)
                {
                    await JS.InvokeVoidAsync("showToast", "warning", 
                        "Please select a department from the dropdown.", Severity.Warning);
                    _isSaving = false;
                    return;
                }
            }

            if (_isEditMode && _selectedRole != null)
            {
                var updateRequest = new UpdateRoleRequest
                    {
                        RoleId = _selectedRole.Id,
                        Name = model.Name,
                        Description = model.Description,
                        DepartmentId = model.DepartmentId
                    };

                var response = await RBACService.UpdateRoleAsync(_selectedRole.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role updated successfully", Severity.Success);
                    await LoadRoles();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to update role", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateRoleRequest
                    {
                        Name = model.Name,
                        Description = model.Description,
                        DepartmentId = model.DepartmentId
                    };

                var response = await RBACService.CreateRoleAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role created successfully", Severity.Success);
                    await LoadRoles();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", response.Message ?? "Failed to create role", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

