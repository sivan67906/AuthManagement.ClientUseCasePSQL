@page "/reset-password"
@using AuthManagement.Shared
@using AuthManagement.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS
@layout AuthLayout
@implements IAsyncDisposable

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner py-6">
        <!-- Reset Password -->
        <div class="card">
            <div class="card-body">
                <!-- Logo -->
                <div class="app-brand justify-content-center mb-6">
                    <a href="/" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <span class="text-primary">
                                <svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.00172773 0V6.85398C0.00172773 6.85398 -0.133178 9.01207 1.98092 10.8388L13.6912 21.9964L19.7809 21.9181L18.8042 9.88248L16.4951 7.17289L9.23799 0H0.00172773Z" fill="currentColor"></path>
                                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M7.69824 16.4364L12.5199 3.23696L16.5541 7.25596L7.69824 16.4364Z" fill="#161616"></path>
                                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M8.07751 15.9175L13.9419 4.63989L16.5849 7.28475L8.07751 15.9175Z" fill="#161616"></path>
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7.77295 16.3566L23.6563 0H32V6.88383C32 6.88383 31.8262 9.17836 30.6591 10.4057L19.7824 22H13.6938L7.77295 16.3566Z" fill="currentColor"></path>
                                </svg>
                            </span>
                        </span>
                        <span class="app-brand-text demo text-heading fw-bold">Auth System</span>
                    </a>
                </div>
                <!-- /Logo -->
                <h4 class="mb-1">Reset Password </h4>
                <p class="mb-6">Your new password must be different from previously used passwords</p>

                <EditForm Model="model" OnValidSubmit="HandleResetPassword" class="mb-4">
                    <div class="mb-6 form-password-toggle form-control-validation">
                        <label class="form-label" for="new-password">New Password <span class="text-danger">*</span></label>
                        <div class="input-group input-group-merge">
                            <input type="password" id="new-password" class="form-control" @bind="model.NewPassword" placeholder="路路路路路路路路路路路路" autofocus>
                            <span class="input-group-text cursor-pointer password-eye"><i class="icon-base ti tabler-eye-off"></i></span>
                        </div>
                    </div>
                    <div class="mb-6 form-password-toggle form-control-validation">
                        <label class="form-label" for="confirm-password">Confirm Password <span class="text-danger">*</span></label>
                        <div class="input-group input-group-merge">
                            <input type="password" id="confirm-password" class="form-control" @bind="model.ConfirmPassword" placeholder="路路路路路路路路路路路路">
                            <span class="input-group-text cursor-pointer password-eye"><i class="icon-base ti tabler-eye-off"></i></span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert @(success ? "alert-success" : "alert-danger") mb-4" role="alert">@message</div>
                    }

                    <button class="btn btn-primary d-grid w-100" type="submit" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Resetting...</span>
                        }
                        else
                        {
                            <span>Set new password</span>
                        }
                    </button>
                </EditForm>

                <div class="text-center">
                    <a href="/login" class="d-flex justify-content-center">
                        <i class="icon-base ti tabler-chevron-left scaleX-n1-rtl me-1_5"></i>
                        Back to login
                    </a>
                </div>
            </div>
        </div>
        <!-- /Reset Password -->
    </div>
</div>

@code {

    private ResetPasswordModel model = new();
    private string? message;
    private bool isLoading;
    private bool success;
    private string? email;
    private string? token;

    private class ResetPasswordModel
    {
        public string NewPassword { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = uri.Query;

        if (!string.IsNullOrEmpty(query) && query.StartsWith("?"))
        {
            var parameters = query.Substring(1).Split('&');
            foreach (var param in parameters)
            {
                var keyValue = param.Split('=');
                if (keyValue.Length == 2)
                {
                    var key = Uri.UnescapeDataString(keyValue[0]);
                    var value = Uri.UnescapeDataString(keyValue[1]);

                    if (key.Equals("email", StringComparison.OrdinalIgnoreCase))
                        email = value;
                    else if (key.Equals("token", StringComparison.OrdinalIgnoreCase))
                        token = value;
                }
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/main.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/popular.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/bootstrap5.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/auto-focus.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/pages-auth.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
        await JS.InvokeVoidAsync("eval", "typeof initPagesAuth === 'function' && initPagesAuth();");
    }

    public async ValueTask DisposeAsync()
    {
        await JS.InvokeVoidAsync("eval", "window.destroyPagesAuth && window.destroyPagesAuth();");
    }

    private async Task HandleResetPassword()
    {
        if (model.NewPassword != model.ConfirmPassword)
        {
            message = "Passwords do not match.";
            await JS.InvokeVoidAsync("showToast", "error", message);

            success = false;
            return;
        }

        if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(token))
        {
            message = "Invalid reset link.";
            await JS.InvokeVoidAsync("showToast", "error", message);

            success = false;
            return;
        }

        isLoading = true;
        message = null;

        try
        {
            var request = new
            {
                Email = email,
                Token = token,
                NewPassword = model.NewPassword,
                ConfirmPassword = model.ConfirmPassword
            };

            var response = await Http.PostAsJsonAsync("/auth/reset-password", request);
            var result = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();

            if (response.IsSuccessStatusCode && result?.Success == true)
            {
                success = true;
                message = "Password reset successful! Redirecting to login...";
                await JS.InvokeVoidAsync("showToast", "success", message);
                await Task.Delay(2000);
                Nav.NavigateTo("/login");
            }
            else
            {
                success = false;
                // Check if there are errors in the response
                if (result?.Errors != null && result.Errors.Count > 0)
                {
                    // Loop through all errors and combine them
                    var errorMessages = new List<string>();
                    foreach (var error in result.Errors)
                    {
                        errorMessages.Add(error);
                    }
                    message = string.Join(", ", errorMessages);
                    await JS.InvokeVoidAsync("showToast", "success", message);

                }
                else
                {
                    message = result?.Message ?? "Failed to reset password. Please try again.";
                    await JS.InvokeVoidAsync("showToast", "error", message);

                }
            }
        }
        catch (Exception)
        {
            success = false;
            message = "An error occurred. Please try again.";
            await JS.InvokeVoidAsync("showToast", "error", message);

        }
        finally
        {
            isLoading = false;
        }
    }
}
