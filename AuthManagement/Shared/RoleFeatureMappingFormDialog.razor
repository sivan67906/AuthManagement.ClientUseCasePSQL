@code {
    [Inject]
    private RBACService RBACService { get; set; } = default!;
    
    [Inject]
    private ILogger<RoleFeatureMappingFormDialog> Logger { get; set; } = default!;
    
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public bool IsEditMode { get; set; }

    [Parameter]
    public bool IsSaving { get; set; }

    [Parameter]
    public RoleFeatureMappingFormModel FormModel { get; set; } = new();

    [Parameter]
    public List<RoleDto> Roles { get; set; } = new();

    [Parameter]
    public List<FeatureDto> Features { get; set; } = new();

    [Parameter]
    public List<DepartmentDto> Departments { get; set; } = new();

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback<RoleFeatureMappingFormModel> OnSubmit { get; set; }
    
    [Parameter]
    public EventCallback<List<RoleDto>> OnRolesUpdated { get; set; }

    private async Task OnDepartmentChangedAsync()
    {
        // Clear role selection when department changes
        FormModel.RoleId = string.Empty;
        
        // Reload roles based on selected department
        await LoadRolesForDepartmentAsync();
    }
    
    private async Task LoadRolesForDepartmentAsync()
    {
        try
        {
            Guid? deptId = string.IsNullOrEmpty(FormModel.DepartmentId) 
                ? null 
                : Guid.Parse(FormModel.DepartmentId);
            
            // If null (System wide), get all roles
            // If specific department, get only that department's roles
            var roleResponse = await RBACService.GetRolesByDepartmentAsync(deptId);
            if (roleResponse.Success && roleResponse.Data != null)
            {
                Roles = roleResponse.Data;
                // Notify parent component
                await OnRolesUpdated.InvokeAsync(Roles);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading roles for department");
        }
    }

    private async Task HandleCancel()
    {
        if (!IsSaving)
        {
            await OnCancel.InvokeAsync();
        }
    }

    private async Task HandleValidSubmit()
    {
        await OnSubmit.InvokeAsync(FormModel);
    }
}
