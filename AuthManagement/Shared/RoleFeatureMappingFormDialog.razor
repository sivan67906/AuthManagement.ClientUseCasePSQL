@using AuthManagement.Models
@using AuthManagement.Services
@using System.ComponentModel.DataAnnotations
@* @inject ILogger<RoleFeatureMappingFormDialog> Logger *@

@if (IsOpen)
{
    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>

    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="ti tabler-layout-sidebar" style="color: #7c3aed; margin-right: 8px;"></i>
                        @(IsEditMode ? "Edit Role Feature Mapping" : "Add Role Feature Mapping")
                    </h5>
                    <button type="button" class="btn-close" @onclick="HandleCancel" disabled="@IsSaving"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <div class="alert alert-info mb-3" style="font-size: 11px;">
                        <i class="ti tabler-info-circle"></i>

                        <div>
                            <strong>Menu Visibility Control:</strong> This mapping determines which menu items/features are visible to a role.
                        </div>
                      
                    </div>

                    <EditForm Model="@FormModel" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                           <div class="mb-3">
                            <label class="form-label">
                                Department <span class="text-danger">*</span>
                            </label>
                            <select class="form-select"
                                    @bind="FormModel.DepartmentId"
                                    @bind:after="OnDepartmentChangedAsync"
                                    disabled="@IsSaving">
                                <option value="">Select Department</option>
                                @foreach (var dept in Departments)
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => FormModel.DepartmentId)" class="text-danger" />
                            <small class="text-muted d-block mt-1">
                                Select the department for which this menu item will be visible
                            </small>
                        </div>


                        <div class="mb-3">
                            <label class="form-label">
                                Role<span class="text-danger">*</span>
                            </label>
                            <select class="form-select"
                                    @bind="FormModel.RoleId"
                                    disabled="@IsSaving">
                                <option value="">Select Role</option>
                                @foreach (var role in Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => FormModel.RoleId)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                Feature/Menu<span class="text-danger">*</span>
                            </label>
                            <select class="form-select"
                                    @bind="FormModel.FeatureId"
                                    disabled="@IsSaving">
                                <option value="">Select Feature</option>
                                @foreach (var feature in Features.Where(f => f.IsMainMenu))
                                {
                                    <option value="@feature.Id">
                                        @feature.Name (Main Menu)
                                    </option>
                                }
                                @foreach (var feature in Features.Where(f => !f.IsMainMenu))
                                {
                                    var parent = Features.FirstOrDefault(f => f.Id == feature.ParentFeatureId);
                                    <option value="@feature.Id">
                                        @if (parent != null)
                                        {
                                            @($"{parent.Name} â†’ {feature.Name}")
                                        }
                                        else
                                        {
                                            @feature.Name
                                        }
                                    </option>
                                }
                            </select>
                            <ValidationMessage For="@(() => FormModel.FeatureId)" class="text-danger" />
                            <small class="text-muted d-block mt-1">
                                Select the menu item that should be visible to this role
                            </small>
                        </div>

                     
                        @* <div class="form-check mb-3">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   id="isActive"
                                   @bind="FormModel.IsActive"
                                   disabled="@IsSaving">
                            <label class="form-check-label" for="isActive">
                                Active
                            </label>
                        </div> *@

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="button"
                                    class="btn btn-label-secondary"
                                    @onclick="HandleCancel"
                                    disabled="@IsSaving">
                                Cancel
                            </button>
                            <button type="submit"
                                    class="btn btn-primary"
                                    disabled="@IsSaving">
                                @if (IsSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Saving...</span>
                                }
                                else
                                {
                                    <i class="ti tabler-check me-1"></i>
                                    <span>@(IsEditMode ? "Update" : "Create")</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

