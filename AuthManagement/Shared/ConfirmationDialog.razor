@page "/confirm-dialog"
@inject NavigationManager Nav

<div class="modal fade show" style="display:block;" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>@ContentText</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-@ColorClass" @onclick="Submit">@ButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string ContentText { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string ButtonText { get; set; } = "Confirm";
    [Parameter] public string ColorClass { get; set; } = "primary"; // bootstrap color: primary, danger, success, etc.

    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private async Task Submit()
    {
        await OnClose.InvokeAsync(true);
    }

    private async Task Cancel()
    {
        await OnClose.InvokeAsync(false);
    }
}