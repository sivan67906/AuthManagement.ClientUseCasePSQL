@using AuthManagement.Models
@using AuthManagement.Services
@inject RBACService RBACService
@inject IJSRuntime JSRuntime
@inject ILogger<RolePagePermissionMappingFormDialog_New> Logger

@* This component receives props from parent instead of managing its own state *@

<style>
    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1040;
        display: @(IsOpen ? "block" : "none");
    }

    .modal-dialog-custom {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        z-index: 1050;
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        display: @(IsOpen ? "block" : "none");
        overflow: hidden;
    }

    .modal-header-custom {
        padding: 20px 24px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #111827;
        margin: 0;
    }

    .modal-body-custom {
        padding: 24px;
        overflow-y: auto;
        max-height: calc(90vh - 140px);
    }

    .modal-footer-custom {
        padding: 16px 24px;
        border-top: 1px solid #e5e7eb;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #374151;
        font-size: 14px;
    }

    .form-label-required::after {
        content: " *";
        color: #ef4444;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.2s;
    }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

    .error-message {
        color: #ef4444;
        font-size: 12px;
        margin-top: 4px;
    }

    .permission-checkboxes {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 12px;
        background: #f9fafb;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
    }

    .permission-checkbox-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px;
        background: white;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

        .permission-checkbox-item:hover {
            background: #f3f4f6;
        }

        .permission-checkbox-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

            .permission-checkbox-item input[type="checkbox"]:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

    .permission-checkbox-label {
        font-size: 14px;
        color: #374151;
        cursor: pointer;
        flex: 1;
    }

    .permission-badge-preview {
        font-size: 11px;
        font-weight: 700;
        padding: 4px 8px;
        border-radius: 4px;
        color: white;
    }

    .validation-warning {
        background: #fef3c7;
        border: 1px solid #fcd34d;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 16px;
        display: flex;
        align-items: start;
        gap: 10px;
    }

    .validation-warning-icon {
        color: #f59e0b;
        font-size: 20px;
    }

    .validation-warning-text {
        color: #92400e;
        font-size: 14px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #3b82f6;
        color: white;
    }

        .btn-primary:hover:not(:disabled) {
            background: #2563eb;
        }

        .btn-primary:disabled {
            background: #9ca3af;
            cursor: not-allowed;
        }

    .btn-secondary {
        background: #e5e7eb;
        color: #374151;
    }

        .btn-secondary:hover {
            background: #d1d5db;
        }

    .close-btn {
        background: none;
        border: none;
        font-size: 24px;
        color: #6b7280;
        cursor: pointer;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
    }

        .close-btn:hover {
            background: #f3f4f6;
            color: #111827;
        }

    .alert-info {
        background-color: #dbeafe;
        border: 1px solid #93c5fd;
        border-radius: 6px;
        color: #1e40af;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .alert-info i {
        font-size: 16px;
    }
</style>

<div class="modal-backdrop-custom" @onclick="HandleCancel"></div>
<div class="modal-dialog-custom">
    <div class="modal-header-custom">
        <h5 class="modal-title">@(IsEditMode ? "Edit Permissions" : "Create Permission Mapping")</h5>
        <button class="close-btn" @onclick="HandleCancel">&times;</button>
    </div>

    <div class="modal-body-custom">
        @if (_showViewWarning)
        {
            <div class="validation-warning">
                <div class="validation-warning-icon">⚠️</div>
                <div class="validation-warning-text">
                    <strong>View permission is mandatory!</strong><br />
                    You must select the View permission when selecting other permissions.
                    View permission is required for security and consistency.
                </div>
            </div>
        }

        <div class="form-group">
            <label class="form-label">Department</label>
            <select class="form-select" 
                    @bind="_selectedDepartmentId" 
                    disabled="@IsEditMode">
                <option value="">-- All Departments (System-wide) --</option>
                @foreach (var dept in _departments)
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            </select>
            @if (_errors.ContainsKey("Department"))
            {
                <div class="error-message">@_errors["Department"]</div>
            }
        </div>

        <div class="form-group">
            <label class="form-label form-label-required">Role</label>
            <select class="form-select" 
                    @bind="_selectedRoleId" 
                    disabled="@IsEditMode">
                <option value="">-- Select Role --</option>
                @foreach (var role in _roles)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
            @if (_errors.ContainsKey("Role"))
            {
                <div class="error-message">@_errors["Role"]</div>
            }
        </div>

        <div class="form-group">
            <label class="form-label form-label-required">Page</label>
            <select class="form-select" 
                    @bind="_selectedPageId" 
                    disabled="@IsEditMode">
                <option value="">-- Select Page --</option>
                @foreach (var pageItem in _pages)
                {
                    <option value="@pageItem.Id">@pageItem.Name (@pageItem.Url)</option>
                }
            </select>
            @if (_errors.ContainsKey("Page"))
            {
                <div class="error-message">@_errors["Page"]</div>
            }
        </div>

        <div class="form-group">
            <label class="form-label form-label-required">Permissions</label>
            <div class="alert alert-info" style="font-size: 12px; padding: 8px 12px; margin-bottom: 12px;">
                <i class="ti tabler-info-circle"></i>
                <strong>View permission is mandatory.</strong> It cannot be unchecked and is required for all permission mappings.
            </div>
            <div class="permission-checkboxes">
                @foreach (var permission in _permissions.OrderBy(p => GetPermissionOrder(p.Name)))
                {
                    var isViewPermission = permission.Name.Equals("View", StringComparison.OrdinalIgnoreCase);
                    var isChecked = _selectedPermissionIds.Contains(permission.Id.ToString());

                    <div class="permission-checkbox-item">
                        <input type="checkbox"
                               id="@($"perm_{permission.Id}")"
                               checked="@isChecked"
                               disabled="@isViewPermission"
                               @onchange="@((e) => OnPermissionToggle(permission.Id.ToString(), (bool)(e.Value ?? false)))" />
                        <label class="permission-checkbox-label" for="@($"perm_{permission.Id}")">
                            @permission.Name
                            @if (isViewPermission)
                            {
                                <span style="color: #6b7280; font-size: 12px;">(Required - Always enabled)</span>
                            }
                        </label>
                        <span class="permission-badge-preview @GetBadgeClass(permission.Name)">
                            @GetPermissionCode(permission.Name)
                        </span>
                    </div>
                }
            </div>
            @if (_errors.ContainsKey("Permissions"))
            {
                <div class="error-message">@_errors["Permissions"]</div>
            }
        </div>
    </div>

    <div class="modal-footer-custom">
        <button class="btn btn-secondary" @onclick="HandleCancel">Cancel</button>
        <button class="btn btn-primary" @onclick="HandleSave" disabled="@IsSaving">
            @(IsSaving ? "Saving..." : "Save")
        </button>
    </div>
</div>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public DisplayRolePagePermissionGroup? SelectedMapping { get; set; }
    [Parameter] public EventCallback<RolePagePermissionFormModel> OnSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public bool IsSaving { get; set; }

    // Dropdowns
    private List<DepartmentDto> _departments = new();
    private List<RoleDto> _roles = new();
    private List<PageDto> _pages = new();
    private List<PermissionDto> _permissions = new();

    // Selected values
    private string _selectedDepartmentId = "";
    private string _selectedRoleId = "";
    private string _selectedPageId = "";
    private List<string> _selectedPermissionIds = new();

    // Validation
    private Dictionary<string, string> _errors = new();
    private bool _showViewWarning = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && _permissions.Count == 0)
        {
            await LoadDropdownData();
        }

        if (IsOpen)
        {
            if (IsEditMode && SelectedMapping != null)
            {
                LoadEditMode();
            }
            else if (!IsEditMode)
            {
                LoadCreateMode();
            }
        }
    }

    private void LoadCreateMode()
    {
        _selectedDepartmentId = "";
        _selectedRoleId = "";
        _selectedPageId = "";
        _selectedPermissionIds.Clear();
        _errors.Clear();
        _showViewWarning = false;

        // Auto-select View permission
        var viewPermission = _permissions.FirstOrDefault(p => p.Name.Equals("View", StringComparison.OrdinalIgnoreCase));
        if (viewPermission != null)
        {
            _selectedPermissionIds.Add(viewPermission.Id.ToString());
        }
    }

    private void LoadEditMode()
    {
        if (SelectedMapping != null)
        {
            _selectedDepartmentId = SelectedMapping.DepartmentId?.ToString() ?? "";
            _selectedRoleId = SelectedMapping.RoleId.ToString();
            _selectedPageId = SelectedMapping.PageId.ToString();
            _selectedPermissionIds = SelectedMapping.Permissions
                .Select(p => p.PermissionId.ToString())
                .ToList();
            _errors.Clear();
            _showViewWarning = false;
        }
    }

    private async Task LoadDropdownData()
    {
        try
        {
            var deptResponse = await RBACService.GetAllDepartmentsAsync();
            _departments = deptResponse.Success && deptResponse.Data != null ? deptResponse.Data : new();

            var roleResponse = await RBACService.GetAllRolesAsync();
            _roles = roleResponse.Success && roleResponse.Data != null ? roleResponse.Data : new();

            var pageResponse = await RBACService.GetAllPagesAsync();
            _pages = pageResponse.Success && pageResponse.Data != null ? pageResponse.Data : new();

            var permResponse = await RBACService.GetAllPermissionsAsync();
            _permissions = permResponse.Success && permResponse.Data != null ? permResponse.Data : new();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading dropdown data");
        }
    }

    private void OnPermissionToggle(string permissionId, bool isChecked)
    {
        if (isChecked)
        {
            if (!_selectedPermissionIds.Contains(permissionId))
            {
                _selectedPermissionIds.Add(permissionId);
            }
        }
        else
        {
            _selectedPermissionIds.Remove(permissionId);
        }

        ValidateViewMandatory();
        StateHasChanged();
    }

    private void ValidateViewMandatory()
    {
        var viewPermission = _permissions.FirstOrDefault(p => p.Name.Equals("View", StringComparison.OrdinalIgnoreCase));
        if (viewPermission != null)
        {
            var viewSelected = _selectedPermissionIds.Contains(viewPermission.Id.ToString());
            var otherSelected = _selectedPermissionIds.Any(id => id != viewPermission.Id.ToString());

            _showViewWarning = otherSelected && !viewSelected;

            // Auto-select View if other permissions are selected
            if (otherSelected && !viewSelected)
            {
                _selectedPermissionIds.Add(viewPermission.Id.ToString());
                _showViewWarning = false;
            }
        }
    }

    private async Task HandleSave()
    {
        if (!Validate()) return;

        var model = new RolePagePermissionFormModel
        {
            RoleId = _selectedRoleId,
            PageId = _selectedPageId,
            DepartmentId = _selectedDepartmentId,
            SelectedPermissionIds = _selectedPermissionIds.Select(Guid.Parse).ToList()
        };

        await OnSubmit.InvokeAsync(model);
    }

    private async Task HandleCancel()
    {
        _selectedDepartmentId = "";
        _selectedRoleId = "";
        _selectedPageId = "";
        _selectedPermissionIds.Clear();
        _errors.Clear();
        _showViewWarning = false;
        await OnCancel.InvokeAsync();
    }

    private bool Validate()
    {
        _errors.Clear();

        if (string.IsNullOrEmpty(_selectedRoleId))
            _errors["Role"] = "Role is required";

        if (string.IsNullOrEmpty(_selectedPageId))
            _errors["Page"] = "Page is required";

        if (!_selectedPermissionIds.Any())
            _errors["Permissions"] = "At least one permission must be selected";

        var viewPermission = _permissions.FirstOrDefault(p => p.Name.Equals("View", StringComparison.OrdinalIgnoreCase));
        if (viewPermission != null && !_selectedPermissionIds.Contains(viewPermission.Id.ToString()))
        {
            _errors["Permissions"] = "View permission is mandatory and must be selected";
        }

        return !_errors.Any();
    }

    private string GetBadgeClass(string permissionName)
    {
        return permissionName.ToLower() switch
        {
            "view" => "badge-view",
            "create" => "badge-create",
            "update" => "badge-update",
            "delete" => "badge-delete",
            _ => "badge-default"
        };
    }

    private string GetPermissionCode(string permissionName)
    {
        if (string.IsNullOrEmpty(permissionName)) return "?";

        return permissionName.ToLower() switch
        {
            "view" => "V",
            "create" => "C",
            "update" => "U",
            "delete" => "D",
            _ => permissionName[0].ToString().ToUpper()
        };
    }

    private int GetPermissionOrder(string permissionName)
    {
        return permissionName.ToLower() switch
        {
            "view" => 1,
            "create" => 2,
            "update" => 3,
            "delete" => 4,
            _ => 5
        };
    }
}
