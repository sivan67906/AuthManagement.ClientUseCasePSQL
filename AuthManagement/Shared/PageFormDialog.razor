@using AuthManagement.Models
@using AuthManagement.Helpers
@using System.ComponentModel.DataAnnotations

@if (IsOpen)
{
    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="ti tabler-file" style="color: #7c3aed; margin-right: 8px;"></i>
                        @(IsEditMode ? "Edit Page" : "Add Page")
                    </h5>
                    <button type="button" class="btn-close" @onclick="HandleCancel" disabled="@IsSaving"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <EditForm Model="@FormModel" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label class="form-label">Page Name<span class="text-danger">*</span></label>
                            <input type="text" id="popupFirstInput"
                                   class="form-control @(nameValidationError != null ? "is-invalid" : "")" 
                                   placeholder="Enter page name"
                                   value="@FormModel.Name"
                                   @oninput="OnNameInput"
                                   data-input-type="name"
                                   disabled="@IsSaving" />
                            @if (nameValidationError != null)
                            {
                                <div class="invalid-feedback d-block">@nameValidationError</div>
                            }
                            <ValidationMessage For="@(() => FormModel.Name)" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Page URL<span class="text-danger">*</span></label>
                            <input type="text" 
                                   class="form-control @(urlValidationError != null ? "is-invalid" : "")" 
                                   placeholder="/example"
                                   value="@FormModel.Url"
                                   @oninput="OnUrlInput"
                                   data-input-type="url"
                                   disabled="@IsSaving" />
                            @if (urlValidationError != null)
                            {
                                <div class="invalid-feedback d-block">@urlValidationError</div>
                            }
                            <ValidationMessage For="@(() => FormModel.Url)" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control @(descriptionValidationError != null ? "is-invalid" : "")" 
                                      placeholder="Enter description" 
                                      rows="3"
                                      @oninput="OnDescriptionInput"
                                      disabled="@IsSaving">@FormModel.Description</textarea>
                            @if (descriptionValidationError != null)
                            {
                                <div class="invalid-feedback d-block">@descriptionValidationError</div>
                            }
                        </div>
                       @*  <div class="mb-3">
                            <label class="form-label">Menu Context</label>
                            <InputText @bind-Value="FormModel.MenuContext" class="form-control" placeholder="Enter menu context (optional)" disabled="@IsSaving" />
                        </div> *@
                        <div class="mb-3">
                            <label class="form-label">Display Order<span class="text-danger">*</span></label>
                            <InputNumber @bind-Value="FormModel.DisplayOrder" class="form-control" disabled="@IsSaving" Min="0" />
                            <ValidationMessage For="@(() => FormModel.DisplayOrder)" class="text-danger" />
                        </div>
                        @* <div class="mb-3">
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="FormModel.IsActive" class="form-check-input" id="pageIsActive" disabled="@IsSaving" />
                                <label class="form-check-label" for="pageIsActive">Active</label>
                            </div>
                        </div> *@
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="button" class="btn btn-label-secondary" @onclick="HandleCancel" disabled="@IsSaving">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@(IsSaving || HasValidationErrors())">
                                @if (IsSaving) { <span class="spinner-border spinner-border-sm me-2"></span><span>Saving...</span> }
                                else
                                {
                                    <i class="ti tabler-check me-1"></i>
                                    <span>@(IsEditMode ? "Update" : "Create")</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop { position: fixed; top: 0; left: 0; z-index: 11111; width: 100vw; height: 100vh; background-color: rgba(0, 0, 0, 0.5); }
    .modal { z-index: 111111; }
    .modal-dialog-centered { min-height: calc(100% - 3.5rem); display: flex; align-items: center; margin: 1.75rem auto; max-width: 540px; width: 100%; padding: 0 15px; }
    .modal-content { border-radius: 8px; border: none; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15); }
    .modal-header { padding: 20px 24px; border-bottom: 1px solid #e9ecef; }
    .modal-title { font-size: 18px; font-weight: 600; color: #333; display: flex; align-items: center; margin: 0; }
    .btn-close { border-radius: 1rem !important; }
    .form-label { font-weight: 500; color: #333; margin-bottom: 8px; font-size: 14px; display: flex; align-items: center; gap: 5px; }
    .form-control { border: 1px solid #d9d9e3; border-radius: 6px; padding: 10px 12px; font-size: 14px; }
        .form-control:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
            outline: none;
            padding-block: 9px;
        }

    .form-control.is-invalid { border-color: #dc3545; }
    .invalid-feedback { color: #dc3545; font-size: 12px; margin-top: 4px; }
    .btn-primary { background-color: #7c3aed; border-color: #7c3aed; color: white; padding: 8px 20px; font-size: 14px; font-weight: 500; border-radius: 6px; }
    .btn-label-secondary { background-color: transparent; border: 1px solid #d9d9e3; color: #666; padding: 8px 20px; font-size: 14px; font-weight: 500; border-radius: 6px; }
    .text-danger { color: #dc3545; font-size: 12px; margin-top: 4px; display: block; }
    .form-check-input:checked { background-color: #7c3aed; border-color: #7c3aed; }
</style>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public bool IsSaving { get; set; }
    [Parameter] public PageFormModel FormModel { get; set; } = new();
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback<PageFormModel> OnSubmit { get; set; }

    private string? nameValidationError;
    private string? urlValidationError;
    private string? descriptionValidationError;

    private void OnNameInput(ChangeEventArgs e)
    {
        var rawValue = e.Value?.ToString() ?? string.Empty;
        var (isValid, errorMessage) = InputValidationHelper.ValidateInput(rawValue, InputTypeEnum.Name, required: true);
        if (!isValid) { nameValidationError = errorMessage; FormModel.Name = InputValidationHelper.FilterInput(rawValue, InputTypeEnum.Name); }
        else { nameValidationError = null; FormModel.Name = rawValue; }
    }

    private void OnUrlInput(ChangeEventArgs e)
    {
        var rawValue = e.Value?.ToString() ?? string.Empty;
        var (isValid, errorMessage) = InputValidationHelper.ValidateInput(rawValue, InputTypeEnum.Url, required: true);
        if (!isValid) { urlValidationError = errorMessage; FormModel.Url = InputValidationHelper.FilterInput(rawValue, InputTypeEnum.Url); }
        else { urlValidationError = null; FormModel.Url = rawValue; }
    }

    private void OnDescriptionInput(ChangeEventArgs e)
    {
        var rawValue = e.Value?.ToString() ?? string.Empty;
        var (isValid, errorMessage) = InputValidationHelper.ValidateInput(rawValue, InputTypeEnum.Description, required: false);
        if (!isValid) { descriptionValidationError = errorMessage; FormModel.Description = InputValidationHelper.FilterInput(rawValue, InputTypeEnum.Description); }
        else { descriptionValidationError = null; FormModel.Description = rawValue; }
    }

    private bool HasValidationErrors() => nameValidationError != null || urlValidationError != null || descriptionValidationError != null;

    private async Task HandleCancel() 
    { 
        if (!IsSaving) { nameValidationError = null; urlValidationError = null; descriptionValidationError = null; await OnCancel.InvokeAsync(); }
    }
    
    private async Task HandleValidSubmit()
    {
        var (nameValid, nameError) = InputValidationHelper.ValidateInput(FormModel.Name, InputTypeEnum.Name, required: true);
        var (urlValid, urlError) = InputValidationHelper.ValidateInput(FormModel.Url, InputTypeEnum.Url, required: true);
        var (descValid, descError) = InputValidationHelper.ValidateInput(FormModel.Description, InputTypeEnum.Description, required: false);
        nameValidationError = nameError; urlValidationError = urlError; descriptionValidationError = descError;
        if (!nameValid || !urlValid || !descValid) return;
        FormModel.Name = InputValidationHelper.Sanitize(FormModel.Name);
        FormModel.Url = InputValidationHelper.Sanitize(FormModel.Url);
        FormModel.Description = InputValidationHelper.SanitizeText(FormModel.Description);
        await OnSubmit.InvokeAsync(FormModel);
    }

    public class PageFormModel
    {
        [Required(ErrorMessage = "Name is required")]
        [StringLength(100, ErrorMessage = "Name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;
        [Required(ErrorMessage = "URL is required")]
        [StringLength(200, ErrorMessage = "URL cannot exceed 200 characters")]
        public string Url { get; set; } = string.Empty;
        [StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string? Description { get; set; }
        [StringLength(200, ErrorMessage = "Menu context cannot exceed 200 characters")]
        public string? MenuContext { get; set; }
        [Required(ErrorMessage = "Display order is required")]
        public int DisplayOrder { get; set; }
        public bool IsActive { get; set; } = true;
    }
}
