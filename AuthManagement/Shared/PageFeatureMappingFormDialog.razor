@using AuthManagement.Models
@using System.ComponentModel.DataAnnotations

@if (IsOpen)
{
    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="ti tabler-puzzle" style="color: #7c3aed; margin-right: 8px;"></i>
                        @(IsEditMode ? "Edit Page Feature Mapping" : "Add Page Feature Mapping")
                    </h5>
                    <button type="button" class="btn-close" @onclick="HandleCancel" disabled="@IsSaving"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <EditForm Model="@FormModel" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label">
                                Page<span class="text-danger">*</span>
                            </label>
                            <select class="form-select" @bind="FormModel.PageId" disabled="@IsSaving">
                                <option value="">Select Page</option>
                                @if (Pages != null)
                                {
                                    @foreach (var pageItem in Pages)
                                    {
                                        <option value="@pageItem.Id.ToString()">@pageItem.Name</option>
                                    }
                                }
                            </select>
                            <ValidationMessage For="@(() => FormModel.PageId)" class="text-danger" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                Feature<span class="text-danger">*</span>
                            </label>
                            <select class="form-select" @bind="FormModel.FeatureId" disabled="@IsSaving">
                                <option value="">Select Feature</option>
                                @if (Features != null)
                                {
                                    @foreach (var feature in Features)
                                    {
                                        <option value="@feature.Id.ToString()">@feature.Name</option>
                                    }
                                }
                            </select>
                            <ValidationMessage For="@(() => FormModel.FeatureId)" class="text-danger" />
                        </div>
                        
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="button" 
                                    class="btn btn-label-secondary" 
                                    @onclick="HandleCancel"
                                    disabled="@IsSaving">
                                Cancel
                            </button>
                            <button type="submit" 
                                    class="btn btn-primary" 
                                    disabled="@IsSaving">
                                @if (IsSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Saving...</span>
                                }
                                else
                                {
                                    <i class="ti tabler-check me-1"></i>
                                    <span>@(IsEditMode ? "Update" : "Create")</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 11000;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal {
        z-index: 11001;
    }

    .modal-dialog-centered {
        min-height: calc(100% - 3.5rem);
        display: flex;
        align-items: center;
        margin: 1.75rem auto;
        max-width: 540px;
        width: 100%;
        padding: 0 15px;
    }

    .modal-content {
        border-radius: 8px;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        overflow: visible;
        max-width: 100%;
        width: 100%;
    }

    .modal-header {
        padding: 20px 24px;
        border-bottom: 1px solid #e9ecef;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
    }

    .modal-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        display: flex;
        align-items: center;
        margin: 0;
    }

    .btn-close {
        border-radius: 1rem !important;
    }

    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 1px solid #d9d9e3;
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 14px;
    }

    .form-control:focus, .form-select:focus {
        border-color: #7c3aed;
        box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
        outline: none;
    }

    .form-control:disabled, .form-select:disabled {
        background-color: #f5f5f5;
        opacity: 0.7;
    }

    .btn-primary {
        background-color: #7c3aed;
        border-color: #7c3aed;
        color: white;
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 6px;
    }

    .btn-primary:hover:not(:disabled) {
        background-color: #6d28d9;
        border-color: #6d28d9;
    }

    .btn-primary:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .btn-label-secondary {
        background-color: transparent;
        border: 1px solid #d9d9e3;
        color: #666;
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 6px;
    }

    .btn-label-secondary:hover:not(:disabled) {
        background-color: #f5f5f5;
        border-color: #d9d9e3;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 4px;
        display: block;
    }
    
    .form-label .text-danger {
        display: inline;
        margin: 0;
        margin-left: 2px;
        font-size: inherit;
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
        border-width: 0.15em;
    }
</style>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public bool IsEditMode { get; set; }

    [Parameter]
    public bool IsSaving { get; set; }

    [Parameter]
    public MappingFormModel FormModel { get; set; } = new();

    [Parameter]
    public List<PageDto> Pages { get; set; } = new();

    [Parameter]
    public List<FeatureDto> Features { get; set; } = new();

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback<MappingFormModel> OnSubmit { get; set; }

    private async Task HandleCancel()
    {
        if (!IsSaving)
        {
            await OnCancel.InvokeAsync();
        }
    }

    private async Task HandleValidSubmit()
    {
        await OnSubmit.InvokeAsync(FormModel);
    }

    public class MappingFormModel
    {
        [Required(ErrorMessage = "Page is required")]
        public string PageId { get; set; } = string.Empty;

        [Required(ErrorMessage = "Feature is required")]
        public string FeatureId { get; set; } = string.Empty;
    }
}
