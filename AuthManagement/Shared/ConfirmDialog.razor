@using AuthManagement.Services
@inject BootstrapDialogService DialogService
@implements IDisposable

@if (_isVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@_title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    <p>@_message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="Confirm">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool _isVisible = false;
    private string _title = string.Empty;
    private string _message = string.Empty;
    private TaskCompletionSource<bool>? _tcs;

    protected override void OnInitialized()
    {
        DialogService.OnShowConfirm += ShowDialog;
    }

    private Task<bool> ShowDialog(string title, string message)
    {
        _title = title;
        _message = message;
        _isVisible = true;
        _tcs = new TaskCompletionSource<bool>();
        StateHasChanged();
        return _tcs.Task;
    }

    private void Confirm()
    {
        _isVisible = false;
        _tcs?.SetResult(true);
        StateHasChanged();
    }

    private void Cancel()
    {
        _isVisible = false;
        _tcs?.SetResult(false);
        StateHasChanged();
    }

    public void Dispose()
    {
        DialogService.OnShowConfirm -= ShowDialog;
    }
}
