    <Authorized>
        <li class="nav-item navbar-dropdown dropdown-user dropdown">
            <a class="nav-link dropdown-toggle hide-arrow p-0 d-flex align-items-center gap-2" href="javascript:void(0);" data-bs-toggle="dropdown">
                <div class="avatar avatar-online">
                    <div class="avatar-initial rounded-circle bg-label-primary">@AvatarInitials</div>
                </div>

                @* <div style="display: flex;align-items: flex-start;flex-direction: column;">
                    <h2 style="font-size: 15px;margin-bottom: 0;line-height: 1;">
                        @DisplayName
                    </h2>
                    <h6 class="ProfileRole" 
                        style="margin-bottom: 0;font-weight: 400;font-size: 14px;"
                        title="@(Roles.Count > 1 ? $"Roles: {AllRolesDisplay}" : PrimaryRole)">
                        @PrimaryRole@(Roles.Count > 1 ? $" +{Roles.Count - 1}" : "")
                    </h6>
                </div> *@

            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item mt-0" href="/profile">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-2">
                                <div class="avatar avatar-online">
                                    <div class="avatar-initial rounded-circle bg-label-primary">@AvatarInitials</div>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0">@DisplayName</h6>
                                @if (!string.IsNullOrWhiteSpace(AllRolesDisplay))
                                {
                                    @if (Roles.Count > 1)
                                    {
                                        <small class="text-body-secondary" title="@AllRolesDisplay">@Roles.Count Roles</small>
                                    }
                                    else
                                    {
                                        <small class="text-body-secondary">@PrimaryRole</small>
                                    }
                                }
                            </div>
                        </div>
                    </a>
                </li>
                <li>
                    <div class="dropdown-divider my-1 mx-n2"></div>
                </li>
                <li>
                    <a class="dropdown-item" href="/profile">
                        <i class="icon-base ti tabler-user me-3 icon-md"></i>
                        <span class="align-middle">My Profile</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/change-password">
                        <i class="icon-base ti tabler-key me-3 icon-md"></i>
                        <span class="align-middle">Change Password</span>
                    </a>
                </li>
                @* <li>
                    <a class="dropdown-item" href="/addresses">
                        <i class="icon-base ti tabler-map me-3 icon-md"></i>
                        <span class="align-middle">Addresses</span>
                    </a>
                </li> *@
                <li>
                    <div class="dropdown-divider my-1 mx-n2"></div>
                </li>
                <li>
                    <div class="d-grid px-2 pt-2 pb-1">
                        <button class="btn btn-sm btn-danger d-flex" @onclick="LogoutAsync">
                            <small class="align-middle">Logout</small>
                            <i class="icon-base ti tabler-logout ms-2 icon-14px"></i>
                        </button>
                    </div>
                </li>
            </ul>
        </li>
    </Authorized>
</AuthorizeView>

@code {
    private string? DisplayName { get; set; }
    private string AvatarInitials { get; set; } = "";
    private List<string> Roles { get; set; } = new();
    private string? PrimaryRole { get; set; }
    private string? AllRolesDisplay { get; set; }

    protected override async Task OnInitializedAsync()
    {
        AuthProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        await LoadFromAuthStateAsync();
    }

    private async Task LoadFromAuthStateAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var first = user.FindFirst("given_name")?.Value;
            var last = user.FindFirst("family_name")?.Value;

            var fullName = string.Join(" ", new[] { first, last }.Where(s => !string.IsNullOrWhiteSpace(s)));

            var userName = user.FindFirst("given_name")?.Value
                           ?? user.FindFirst("given_name")?.Value
                           ?? user.FindFirst("email")?.Value;

            DisplayName = !string.IsNullOrWhiteSpace(fullName)
                ? fullName
                : (userName ?? "User");

            AvatarInitials = BuildInitials(first, last, DisplayName);

            Roles = user.FindAll("role")
                        .Select(c => c.Value)
                        .Distinct()
                        .ToList();

            //  UPDATED: Better role display logic
            if (Roles.Count > 0)
            {
                PrimaryRole = Roles.First();
                
                // If user has multiple roles, show them all
                if (Roles.Count > 1)
                {
                    AllRolesDisplay = string.Join(", ", Roles);
                }
                else
                {
                    AllRolesDisplay = PrimaryRole;
                }
            }
            else
            {
                PrimaryRole = "User";
                AllRolesDisplay = "User";
            }
        }
        else
        {
            DisplayName = "Guest";
            AvatarInitials = "G";
            Roles.Clear();
            PrimaryRole = "Guest";
            AllRolesDisplay = "Guest";
        }

        await InvokeAsync(StateHasChanged);
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        await LoadFromAuthStateAsync();
    }

    private string BuildInitials(string? first, string? last, string? fallback)
    {
        var initials = "";

        if (!string.IsNullOrWhiteSpace(first))
            initials += char.ToUpperInvariant(first[0]);
        if (!string.IsNullOrWhiteSpace(last))
            initials += char.ToUpperInvariant(last[0]);

        if (string.IsNullOrWhiteSpace(initials) && !string.IsNullOrWhiteSpace(fallback))
        {
            var parts = fallback.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            if (parts.Length > 0)
                initials = char.ToUpperInvariant(parts[0][0]).ToString();
        }

        return initials;
    }

    private async Task LogoutAsync()
    {
        try
        {
            // Try to call logout endpoint
            await Http.PostAsync("/auth/logout", null);
        }
        catch
        {
            // Ignore network errors; we'll still clear auth state
        }

        // Clear authentication state
        await AuthProvider.ClearAsync();
        
        // Redirect to login page with force reload
        Nav.NavigateTo("/login", forceLoad: true);
    }
}
