@using AuthManagement.Models

@if (IsOpen)
{
    <div class="offcanvas-backdrop @(IsOpen ? "show" : "")" @onclick:stopPropagation="true"></div>
    <div class="offcanvas offcanvas-end @(IsOpen ? "show" : "")" tabindex="-1" @onclick:stopPropagation="true">
        <div class="offcanvas-header">
            <div style="display: flex; align-items: center; gap: 16px; width: calc(100% - 40px); min-width: 0;">
                <div class="avatar-container">
                    <i class="ti tabler-lock" style="font-size: 32px; color: white;"></i>
                </div>
                <div style="width: 219px;">
                    <h5 class="header-title" title="@Permission?.Name"
                        style="    white-space: normal !important;
                    word-wrap: break-word !important;    max-width: 100% !important;">
                        @Permission?.Name
                    </h5>
                    <p class="header-subtitle">
                        @(Permission?.IsActive == true ? "Active" : "Inactive") Permission
                    </p>
                </div>
                <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>

            </div>
        </div>
        <div class="offcanvas-body">
            <div class="info-section">
                <h6 class="section-title">PERMISSION INFORMATION</h6>
                <p class="section-content">@(string.IsNullOrEmpty(Permission?.Description) ? "No description available." : Permission.Description)</p>
            </div>
            <div class="info-section">
                <h6 class="section-title">DETAILS</h6>
                <div class="details-list">
                    <div class="detail-item">
                        <div class="detail-icon"><i class="ti tabler-calendar" style="color: #667eea;"></i></div>
                        <div class="detail-content">
                            <div class="detail-label">Created At</div>
                            <div class="detail-value">@Permission?.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Permission?.CreatedBy))
                    {
                        <div class="detail-item">
                            <div class="detail-icon"><i class="ti tabler-user-plus" style="color: #667eea;"></i></div>
                            <div class="detail-content">
                                <div class="detail-label">Created By</div>
                                <div class="detail-value">@Permission.CreatedBy</div>
                            </div>
                        </div>
                    }
                    @if (Permission?.UpdatedAt != null)
                    {
                        <div class="detail-item">
                            <div class="detail-icon"><i class="ti tabler-refresh" style="color: #667eea;"></i></div>
                            <div class="detail-content">
                                <div class="detail-label">Last Updated</div>
                                <div class="detail-value">@Permission.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Permission?.ModifiedBy))
                    {
                        <div class="detail-item">
                            <div class="detail-icon"><i class="ti tabler-user-edit" style="color: #667eea;"></i></div>
                            <div class="detail-content">
                                <div class="detail-label">Modified By</div>
                                <div class="detail-value">@Permission.ModifiedBy</div>
                            </div>
                        </div>
                    }
                    @* <div class="detail-item">
                        <div class="detail-icon"><i class="ti tabler-circle-check" style="color: @(Permission?.IsActive == true ? "#10b981" : "#ef4444");"></i></div>
                        <div class="detail-content">
                            <div class="detail-label">Status</div>
                            <div><span class="status-badge @(Permission?.IsActive == true ? "status-active" : "status-inactive")">@(Permission?.IsActive == true ? "Active" : "Inactive")</span></div>
                        </div>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
}

<style>
    .offcanvas-backdrop { position: fixed; top: 0; left: 0; z-index: 11111; width: 100vw; height: 100vh; background-color: rgba(0, 0, 0, 0.5); opacity: 0; transition: opacity 0.3s ease-in-out; }
    .offcanvas-backdrop.show { opacity: 1; }
    .offcanvas { position: fixed; top: 0; right: -450px; z-index: 111111; width: 450px; height: 100vh; background-color: white; box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1); transition: right 0.3s ease-in-out; overflow-y: auto; overflow-x: hidden; }
    .offcanvas.show { right: 0; }
    .offcanvas-header { position: relative; display: flex; align-items: flex-start; justify-content: space-between; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 24px; }
    .header-title { margin: 0; font-weight: 600; font-size: 20px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; } .header-subtitle { margin: 4px 0 0 0; opacity: 0.9; font-size: 14px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; }
    .avatar-container { width: 80px; height: 80px; border-radius: 50%; background: rgba(255, 255, 255, 0.2); display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .offcanvas-body { padding: 0; }
    .info-section {
        padding-bottom: 24px;
        padding-top: 10px;
        border-bottom: 1px solid #e9ecef;
    }

    .section-title { color: #666; font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 12px; font-weight: 600; }
    .section-content { color: #333; line-height: 1.6; margin: 0; font-size: 14px; word-wrap: break-word; overflow-wrap: break-word; white-space: pre-wrap; }
    .details-list { display: flex; flex-direction: column; gap: 16px; }
    .detail-item { display: flex; align-items: flex-start; gap: 12px; }
    .detail-icon { width: 40px; height: 40px; border-radius: 8px; background: #f8f9fa; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-size: 20px; }
    .detail-content { flex: 1; min-width: 0; }
    .detail-label { font-size: 13px; color: #666; margin-bottom: 2px; }
    .detail-value { font-size: 14px; color: #333; font-weight: 500; word-wrap: break-word; overflow-wrap: break-word; white-space: normal; }
    .status-badge { display: inline-block; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 500; }
    .status-active { background-color: #d1fae5; color: #065f46; }
    .status-inactive { background-color: #fee2e2; color: #991b1b; }
</style>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public PermissionDto? Permission { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    private async Task Close() => await OnClose.InvokeAsync();
}
