@* No Results Found Component - Issue #1 *@
@* Consistent design across all pages *@

<div class="no-results-container">
    <div class="no-results-icon">
        <i class="@IconClass"></i>
    </div>
    <p class="no-results-message">@Message</p>
    @if (!string.IsNullOrEmpty(SearchTerm))
    {
        <p class="no-results-search-term">Searched for: "<strong>@SearchTerm</strong>"</p>
    }
</div>

<style>
    .no-results-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
        text-align: center;
        min-height: 300px;
    }

    .no-results-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #f5f5f9;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .no-results-icon i {
        font-size: 40px;
        color: #a8aaae;
    }

    .no-results-message {
        font-size: 16px;
        font-weight: 500;
        color: #6c757d;
        margin: 0 0 8px 0;
    }

    .no-results-search-term {
        font-size: 14px;
        color: #999;
        margin: 0;
    }

    .no-results-search-term strong {
        color: #666;
    }
</style>

@code {
    [Parameter]
    public string Message { get; set; } = "No results found";

    [Parameter]
    public string IconClass { get; set; } = "ti tabler-search-off";

    [Parameter]
    public string SearchTerm { get; set; } = string.Empty;
}
